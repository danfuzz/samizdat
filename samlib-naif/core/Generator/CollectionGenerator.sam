##
## `SequenceGenerator` and `MapGenerator` Types
##
## Payload is `{seq: seq, index: int}` or `{map: map, index: int}`.

def Generator = moduleUse({name: ["proto", "Generator"]});


##
## Exported Definitions
##

## Generator used when iterating over lists and strings.
fn SequenceGenerator_nextValue(gen, box) {
    def data = dataOf(gen);
    def index = data::index;

    ## This uses void contagion to fail the `Box::store` call when `index` is
    ## out of range for the collection.
    <> ifIs { <> Box::store(box, &Sequence::nth(data::seq, index)) }
        {
            <> @SequenceGenerator(
                Collection::put(data, "index", Number::add(index, 1)))
        }
        {
            ## Voided (out of elements).
            Box::store(box)
        }
};
genericBind(Generator::nextValue, "SequenceGenerator",
    SequenceGenerator_nextValue);

## `nextValue` binding for list and string.
fn Sequence_nextValue(seq, box) {
    ## Get the first element directly, and return a generator for the rest.
    <> ifIs { <> Box::store(box, &Sequence::nth(seq, 0)) }
        { <> @SequenceGenerator{seq, index: 1} }
        {
            ## `seq` is empty.
            Box::store(box)
        }
};
genericBind(Generator::nextValue, List,   Sequence_nextValue);
genericBind(Generator::nextValue, String, Sequence_nextValue);

## Generator used when iterating over maps.
fn MapGenerator_nextValue(gen, box) {
    def data = dataOf(gen);
    def index = data::index;

    ## This uses void contagion to fail the `Box::store` call when `index` is
    ## out of range for the collection.
    <> ifIs { <> Box::store(box, &Collection::nthMapping(data::map, index)) }
        {
            <> @MapGenerator(
                Collection::put(data, "index", Number::add(index, 1)))
        }
        {
            ## Voided (out of elements).
            Box::store(box)
        }
};
genericBind(Generator::nextValue, "MapGenerator", MapGenerator_nextValue);

## `nextValue` binding for type map.
fn Map_nextValue(map, box) {
    ## Get the first element directly, and return a generator for the rest.
    <> ifIs { <> Box::store(box, &Collection::nthMapping(map, 0)) }
        { <> @MapGenerator{map, index: 1} }
        {
            ## `map` is empty.
            Box::store(box)
        }
};
genericBind(Generator::nextValue, Map, Map_nextValue);
