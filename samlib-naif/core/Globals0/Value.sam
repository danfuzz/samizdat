## Value functions
##


##
## Exported Definitions
##

## Documented in spec.
fn isInt(value) {
    <> hasType(value, Int)
};

## Documented in spec.
fn isList(value) {
    <> hasType(value, List)
};

## Documented in spec.
fn isMap(value) {
    <> hasType(value, Map)
};

## Documented in spec.
fn isOpaqueValue(value) {
    <> ifNot { <> typeIsTransparentDerived(typeOf_new(value)) }
        { <> value }
};

## Documented in spec.
fn isString(value) {
    <> hasType(value, String)
};

## Documented in spec.
fn isUniqlet(value) {
    <> hasType(value, Uniqlet)
};

## Documented in spec.
fn perGe(v1, v2) {
    <> ifNot { <> totEq(perOrder(v1, v2), -1) }
        { <> v2 }
};

## Documented in spec.
fn perGt(v1, v2) {
    <> ifIs { <> totEq(perOrder(v1, v2), 1) }
        { <> v2 }
};

## Documented in spec.
fn perLe(v1, v2) {
    <> ifNot { <> totEq(perOrder(v1, v2), 1) }
        { <> v2 }
};

## Documented in spec.
fn perLt(v1, v2) {
    <> ifIs { <> totEq(perOrder(v1, v2), -1) }
        { <> v2 }
};

## Documented in spec.
fn perNe(v1, v2) {
    <> ifNot { <> perEq(v1, v2) }
        { <> v2 }
};

## Documented in spec.
fn totGe(v1, v2) {
    <> ifNot { <> totEq(totOrder(v1, v2), -1) }
        { <> v2 }
};

## Documented in spec.
fn totGt(v1, v2) {
    <> ifIs { <> totEq(totOrder(v1, v2), 1) }
        { <> v2 }
};

## Documented in spec.
fn totLe(v1, v2) {
    <> ifNot { <> totEq(totOrder(v1, v2), 1) }
        { <> v2 }
};

## Documented in spec.
fn totLt(v1, v2) {
    <> ifIs { <> totEq(totOrder(v1, v2), -1) }
        { <> v2 }
};

## Documented in spec.
fn totNe(v1, v2) {
    <> ifNot { <> totEq(v1, v2) }
        { <> v2 }
};

## Documented in spec.
fn typeNameOf(value) {
    <> nameOf(typeOf_new(value))
};

