##
## `MapGenerator` Type
##
## Payload is `{map: map, index: int}`.

def Collection = moduleUse({name: ["proto", "Collection"]});
def Generator = moduleUse({name: ["proto", "Generator"]});


##
## Exported Definitions
##

## Generator used when iterating over maps.
fn MapGenerator_nextValue(gen, box) {
    def data = dataOf(gen);
    def index = data::index;

    ## This uses void contagion to fail the `Box::store` call when `index` is
    ## out of range for the collection.
    <> ifIs { <> Box::store(box, &Collection::nthMapping(data::map, index)) }
        {
            <> @MapGenerator(
                Collection::put(data, "index", Number::add(index, 1)))
        }
        {
            ## Voided (out of elements).
            Box::store(box)
        }
};
genericBind(Generator::nextValue, "MapGenerator", MapGenerator_nextValue);
