##
## `MapGenerator` Type
##
## Payload is `{map: map, index: int}`.

#= language core.Lang0

def $Collection = moduleLoad("proto.Collection");
def $Number     = moduleLoad("proto.Number");


##
## Exported Definitions
##

## Documented in spec.
fn @@MapGenerator.collect(optFilterFunction?) {
    ## Just use the standard implementation.
    <> Generator_stdCollect(this, optFilterFunction*)
};

## Generator used when iterating over maps.
fn @@MapGenerator.nextValue(box) {
    def index = this::index;

    <> ifValue { <> $Collection::nthMapping(this::map, index) }
        { value ->
            store(box, value);
            <> @MapGenerator{dataOf(this)*, index: $Number::add(index, 1)}
        }
        {
            ## Voided (out of elements).
            store(box)
        }
};
