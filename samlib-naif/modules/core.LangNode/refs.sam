##
## Exported Definitions
##

## Documented in spec.
export def REFS = {}.cat(
    (filterAll(NAMES) { name ->
        {(name): makeVarFetch(name)}
    })*,

    (filterAll(MOD_NAMES) { modName ->
        def mod = modName::mod;
        def name = modName::name;
        def modVar = makeVarFetch("$".cat(mod).toSymbol());
        def refKey = "".cat(mod, "_", name).toSymbol();
        {(refKey): makeCall(SYMS::get, modVar, makeLiteral(name))}
    })*
);
