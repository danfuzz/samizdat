## Set of allowed class attributes.
def CLASS_ATTRIBUTES = @{
    access: true
};

## Expands the `yield` binding of `table` if it is `nonlocalExit`, including
## eliding the actual nonlocal exit when the `table` defines the matching
## yield definition name. Just returns the `yield` directly in
## non-`nonlocalExit` cases.
fn expandYield(table) {
    def yieldNode = ifValueOr { table::yield } { return };

    ifNot { yieldNode.hasName(@nonlocalExit) } { return yieldNode };

    def function = yieldNode::function;
    def value = yieldNode::value;

    ## If the exit's `function` is a variable fetch of the same variable as
    ## this node's yield name, then skip the expansion and just return the
    ## exit's `value` directly.
    ifValueAnd
        { -> function.hasName(@fetch) }
        { . -> function::target.hasName(@varRef) }
        { ., . -> table::yieldDef }
        { ., target, yieldDef -> eq(target::name, yieldDef) }
        { ., ., ., . -> return value };

    def exitCall = ifValueOr
        { ifIs { value.hasName(@void) } { makeCall(function) } }
        {
            ifIs { value.hasName(@maybe) }
                {
                    makeCallOrApply(function,
                        makeInterpolate(makeMaybeValue(value::value)))
                }
        }
        { makeCall(function, value) };

    return makeNoYield(exitCall)
};

## Helper for `makeMapExpression` and `makeSymbolTableExpression`, which
## is parameterized on the "empty" value and the two required constructor
## functions.
export fn makeMapLikeExpression(mappings, classLit, emptyLit) {
    ifIs { eq(mappings, []) }
        {
            ## No mappings. Easy out.
            return emptyLit
        };

    ## Convert the mappings as if it has to be nontrivial. If in the end, it's
    ## possible to use a single call to `new()`, then just do that.

    var singleArgs = [];  ## Single-value mappings, to be `new()`ed.
    var catArgs = [];     ## Arguments ready to be `cat`ed.

    fn addToCat(arg) {
        catArgs := [catArgs*, arg];
    };

    fn addSingleToCat() {
        ifIs { perNe(singleArgs, []) }
            {
                addToCat(makeCall(SYMS::new, classLit, singleArgs*));
                singleArgs := []
            }
    };

    filterPump(mappings) { one ->
        ifIs { one.hasName(@mapping) }
            {
                def keys = one::keys;
                def value = one::value;
                var handled = false;

                ifIs { eq(keys.get_size(), 1) }
                    {
                        def key = keys*;
                        ifNot { key::interpolate }
                            {
                                singleArgs := [singleArgs*, key, value];
                                handled := true
                            }
                    };

                ifIs { eq(handled, false) }
                    {
                        addSingleToCat();
                        addToCat(makeCallOrApply(SYMS::singleValue,
                            classLit, keys*, value))
                    };
            }
            {
                addSingleToCat();
                addToCat(one)
            }
    };

    ifIs { eq(catArgs, []) }
        {
            ## There were no "must be `cat`ed" mappings.
            addSingleToCat();
            return catArgs*
        };

    ## There is at least one mapping that requires special handling. Emit
    ## a call to `cat`, with an appropriately-typed first argument, so as to
    ## ensure a result of the proper type.

    addSingleToCat();
    return makeCall(SYMS::cat, emptyLit, catArgs*)
};


