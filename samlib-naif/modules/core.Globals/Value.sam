## Documented in spec.
export fn ge(value, other) {
    <> ifNot { <> eq(order(value, other), -1) }
        { <> value }
};

## Documented in spec.
export fn gt(value, other) {
    <> ifIs { <> eq(order(value, other), 1) }
        { <> value }
};

## Documented in spec.
export fn le(value, other) {
    <> ifNot { <> eq(order(value, other), 1) }
        { <> value }
};

## Documented in spec.
export fn lt(value, other) {
    <> ifIs { <> eq(order(value, other), -1) }
        { <> value }
};

## Documented in spec.
export fn ne(value, other) {
    <> ifNot { <> eq(value, other) }
        { <> value }
};

