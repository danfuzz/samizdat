## Documented in spec.
fn ge(value, other) {
    <> ifNot { <> totEq(order(value, other), -1) }
        { <> value }
};

## Documented in spec.
fn gt(value, other) {
    <> ifIs { <> totEq(order(value, other), 1) }
        { <> value }
};

## Documented in spec.
fn le(value, other) {
    <> ifNot { <> totEq(order(value, other), 1) }
        { <> value }
};

## Documented in spec.
fn lt(value, other) {
    <> ifIs { <> totEq(order(value, other), -1) }
        { <> value }
};

## Documented in spec.
fn ne(value, other) {
    <> ifNot { <> eq(value, other) }
        { <> value }
};

