##
## Value functions
##

#= language core.Lang0


##
## Exported Definitions
##

## Documented in spec.
export fn perGe(value, other) {
    return? ifNot { value.perOrder(other).perEq(@less) }
        { value }
};

## Documented in spec.
export fn perGt(value, other) {
    return? ifIs { value.perOrder(other).perEq(@more) }
        { value }
};

## Documented in spec.
export fn perLe(value, other) {
    return? ifNot { value.perOrder(other).perEq(@more) }
        { value }
};

## Documented in spec.
export fn perLt(value, other) {
    return? ifIs { value.perOrder(other).perEq(@less) }
        { value }
};

## Documented in spec.
export fn perNe(value, other) {
    return? ifNot { value.perEq(other) }
        { value }
};
