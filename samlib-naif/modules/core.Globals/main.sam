##
## Standard global environment
##

#= language core.Lang0


##
## Private Definitions
##

## All the early globals. This is evaluated eagerly at load time.

import ./constants;
import ./primitives;
import ./Value;
import ./Type;

def EARLY_GLOBALS = {
    $constants*,
    $primitives*,
    $Value*,
    $Type*
};


##
## Exported Definitions
##

## Documented in spec.
export fn earlyEnvironment() {
    return EARLY_GLOBALS
};

## Documented in spec.
export fn fullEnvironment() {
    ## These `loadModule` calls are intentionally delayed (that is, done here
    ## instead of using top-level `import`s), so that this file can be
    ## successfully loaded before most of the module system is ready.

    ## This is just loaded to set up generic function bindings.
    loadModule(@external("core.Boolean"));

    def $Bitwise     = loadModule(@external("core.Bitwise"));
    def $Box         = loadModule(@external("core.Box"));
    def $Collection  = loadModule(@external("core.Collection"));
    def $CommandLine = loadModule(@external("core.CommandLine"));
    def $Format      = loadModule(@external("core.Format"));
    def $Generator   = loadModule(@external("core.Generator"));
    def $Number      = loadModule(@external("proto.Number"));
    def $Peg         = loadModule(@external("core.Peg"));
    def $Range       = loadModule(@external("core.Range"));
    def $Sequence    = loadModule(@external("core.Sequence"));

    return {
        EARLY_GLOBALS*,

        ## Globally-exported modules.
        $Bitwise,
        $Box,
        $Collection,
        $Format,
        $Generator,
        $Number,
        $Peg,
        $Range,
        $Sequence,

        ## Special value. As of this writing, this *could* have been defined
        ## in the early set as just `@NullBox`, but the intention is that
        ## this become more complicated / opaque.
        nullBox: $Box::nullBox,

        ## The one higher-layer function that gets exported to the environment.
        runCommandLine: $CommandLine::runCommandLine
    }
};
