## Exported Definitions
##

## Documented in spec.
fn isInt(value) {
    <> hasType(value, Int)
};

## Documented in spec.
fn isList(value) {
    <> hasType(value, List)
};

## Documented in spec.
fn isOpaqueValue(value) {
    <> ifNot { <> typeIsDerivedData(typeOf(value)) }
        { <> value }
};

## Documented in spec.
fn isString(value) {
    <> hasType(value, String)
};

## Documented in spec.
fn isUniqlet(value) {
    <> hasType(value, Uniqlet)
};

## Documented in spec.
fn typeNameOf(value) {
    <> nameOf(typeOf(value))
};

<> {
    isInt,
    isList,
    isOpaqueValue,
    isString,
    isUniqlet,
    typeNameOf
}
