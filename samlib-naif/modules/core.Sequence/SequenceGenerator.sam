##
## `SequenceGenerator` Type
##
## Payload is `{seq: seq, index: int}`.

def Collection = moduleLoad(["proto", "Collection"]);
def Number     = moduleLoad(["proto", "Number"]);
def Sequence   = moduleLoad(["proto", "Sequence"]);


##
## Exported Definitions
##

## Generator used when iterating over lists and strings.
fn SequenceGenerator_nextValue(gen, box) {
    def data = dataOf(gen);
    def index = data::index;

    <> ifValue { <> Sequence::nth(data::seq, index) }
        { value ->
            store(box, value);
            <> @SequenceGenerator{data*, index: Number::add(index, 1)}
        }
        {
            ## Voided (out of elements).
            store(box)
        }
};
genericBind(nextValue, @@SequenceGenerator, SequenceGenerator_nextValue);

## Just use the standard implementation.
genericBind(collect, @@SequenceGenerator, Generator_stdCollect);
