##
## `ValueGenerator` Type
##

def unboundedCollect = intraLoad("unboundedCollect")::unboundedCollect;


##
## Exported Definitions
##

## Documented in spec.
fn makeValueGenerator(value) {
    <> @ValueGenerator(value)
};

## Documented in spec.
fn @@ValueGenerator.collect(optFilterFunction?) {
    ## It is an "unbounded collect" error to call this.
    <> unboundedCollect(this)
};

## Documented in spec.
fn @@ValueGenerator.nextValue(box) {
    store(box, dataOf(this));
    <> this
};

<> {makeValueGenerator}
