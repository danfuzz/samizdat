##
## `ListWrapGenerator` Type
##
## Payload is `subGen`, the sub-generator.

def $Box = moduleLoad(["core", "Box"]);


##
## Exported Definitions
##

## Documented in spec.
export fn makeListWrapGenerator(generator) {
    <> @ListWrapGenerator(generator)
};

## Documented in spec.
fn @@ListWrapGenerator.collect(optFilterFunction?) {
    ## Just use the standard implementation.
    <> Generator_stdCollect(this, optFilterFunction*)
};

## Documented in spec.
fn @@ListWrapGenerator.nextValue(box) {
    def innerBox = $Box::makePromise();

    <> ifValue { <> nextValue(dataOf(this), innerBox) }
        { nextGenerator ->
            store(box, [fetch(innerBox)]);
            <> @ListWrapGenerator(nextGenerator)
        }
        {
            ## It became voided.
            store(box);
        }
};
