##
## `OptGenerator` Type
##
## Payload is `subGen`, the sub-generator.

#= language core.Lang0

import core.Box :: makePromise;

import ./ValueGenerator :: makeValueGenerator;
import ./unboundedCollect :: unboundedCollect;


##
## Exported Definitions
##

## Documented in spec.
export fn makeOptGenerator(generator) {
    return @OptGenerator(generator)
};

## Documented in spec.
fn @@OptGenerator.collect(optFilterFunction?) {
    ## It is an "unbounded collect" error to call this.
    return unboundedCollect(this)
};

## Documented in spec.
fn @@OptGenerator.nextValue(box) {
    def subGen = dataOf(this);
    def innerBox = makePromise();

    return ifValue { nextValue(subGen, innerBox) }
        { nextGen ->
            store(box, [innerBox*]);
            @OptGenerator(nextGen)
        }
        { nextValue(makeValueGenerator([]), box) }
};
