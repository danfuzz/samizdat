##
## Private functions
##

## Splits a string into a list of strings, dividing on the given character.
fn splitAtChar(s, ch) {
    var result = [];
    var current = "";

    fn addCurrentToResult() {
        result := [result*, current];
        current := ""
    };

    ## This uses `collect` just for the filter function, ignoring the
    ## collected result.
    collect(s, { one ->
        ifIs { <> eq(one, ch) }
            { addCurrentToResult() }
            { current := cat(current, one) }
    });

    addCurrentToResult();
    <> result
};


