## Documented in spec.
fn get_maxArgs(node) {
    def formals = get_formals(node);
    var maxArgs = 0;

    Generator::filterPump(formals) { f ->
        ifValue { <> f::repeat }
            { rep ->
                ifIs { <> eq(rep, "*") } { return -1 };
                ifIs { <> eq(rep, "+") } { return -1 };
            };
        maxArgs := Number::add(maxArgs, 1)
    };

    <> maxArgs
};

## Documented in spec.
fn get_minArgs(node) {
    def formals = get_formals(node);
    var minArgs = 0;

    Generator::filterPump(formals) { <next> f ->
        ifValue { <> f::repeat }
            { rep ->
                ifIs { <> eq(rep, "?") } { <next> };
                ifIs { <> eq(rep, "*") } { <next> };
            };
        minArgs := Number::add(minArgs, 1)
    };

    <> minArgs
};

