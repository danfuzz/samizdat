def $Generator = moduleLoad(["core", "Generator"]);
def $Number    = moduleLoad(["proto", "Number"]);


##
## Exported functions
##

## Documented in spec.
export fn formalsMaxArgs(formals) {
    var maxArgs = 0;

    $Generator::filterPump(formals) { f ->
        ifValue { <> f::repeat }
            { rep ->
                ifIs { <> eq(rep, "*") } { return -1 };
                ifIs { <> eq(rep, "+") } { return -1 };
            };
        maxArgs := $Number::add(maxArgs, 1)
    };

    <> maxArgs
};

## Documented in spec.
export fn formalsMinArgs(formals) {
    var minArgs = 0;

    $Generator::filterPump(formals) { <next> f ->
        ifValue { <> f::repeat }
            { rep ->
                ifIs { <> eq(rep, "?") } { <next> };
                ifIs { <> eq(rep, "*") } { <next> };
            };
        minArgs := $Number::add(minArgs, 1)
    };

    <> minArgs
};
