#= language core.Lang0

import core.Generator;
import proto.Number;


##
## Exported Definitions
##

## Documented in spec.
export fn formalsMaxArgs(formals) {
    var maxArgs = 0;

    $Generator::filterPump(formals) { f ->
        ifValue { <> f::repeat }
            { rep ->
                ifIs { <> eq(rep, "*") } { return -1 };
                ifIs { <> eq(rep, "+") } { return -1 };
            };
        maxArgs := $Number::add(maxArgs, 1)
    };

    <> maxArgs
};

## Documented in spec.
export fn formalsMinArgs(formals) {
    var minArgs = 0;

    $Generator::filterPump(formals) { f /next ->
        ifValue { <> f::repeat }
            { rep ->
                ifIs { <> eq(rep, "?") } { yield /next };
                ifIs { <> eq(rep, "*") } { yield /next };
            };
        minArgs := $Number::add(minArgs, 1)
    };

    <> minArgs
};
