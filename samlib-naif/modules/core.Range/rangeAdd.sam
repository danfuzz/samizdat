#= language core.Lang0

import proto.Number :: add;


##
## Exported Definitions
##

## `value.rangeAdd(amount)` generic, used to increment ints and chars.
export fn .rangeAdd(amount);

fn Int.rangeAdd(amount) {
    <> add(this, amount)
};

fn String.rangeAdd(amount) {
    <> toString(add(toInt(this), amount))
};
