##
## `PegCode` class
##

#= language core.Lang0

import core.Format;


##
## Class Definition
##
## Payload: {function: func}

## Secrets used to control access to this class.
def ACCESS = @ACCESS.toUnlisted();
def NEW = @NEW.toUnlisted();

export class PegCode
        access: ACCESS,
        new: NEW {
    ## Documented in spec.
    class.new(function) {
        return this.(NEW)(@{function})
    };

    ## Documented in spec.
    .parse(box, state) {
        def data = this.(ACCESS)();
        return? ifValue { data::function(state.get_context()*) }
            { result ->
                box* := result;
                state.addContext(result)
            }
    };
};
