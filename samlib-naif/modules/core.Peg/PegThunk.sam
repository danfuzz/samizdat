##
## `PegThunk` class
##

#= language core.Lang0


##
## Class Definition
##
## Payload: {function: func}

## Secret used to control access to this class.
def SECRET = @secret.toUnlisted();

class PegThunk
        access: SECRET {
    ## Documented in spec.
    fn parse(box, input, items*) {
        def data = SECRET(this);
        return? ifValue { data::function(items*) }
            { thunkResult -> thunkResult.parse(box, input, items*) }
    };
};


##
## Exported Definitions
##

## Documented in spec.
export fn makeParserThunk(function) {
    return makeObject(PegThunk, SECRET, @{function})
};


