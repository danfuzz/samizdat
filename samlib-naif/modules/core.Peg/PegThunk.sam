##
## `PegThunk` class
##

#= language core.Lang0

import ./protocol :: parse;


##
## Class Definition
##

## Secret used to control access to this class. TODO: Should probably be an
## anonymous selector.
def SECRET = makeUniqlet();

## Class being defined here.
def PegThunk = makeObjectClass("PegThunk", SECRET);

## Documented in spec.
fn PegThunk.parse(box, input, items*) {
    def data = objectDataOf(this, SECRET);
    return? ifValue { data::function(items*) }
        { thunkResult -> parse(thunkResult, box, input, items*) }
};


##
## Exported Definitions
##

## Documented in spec.
export fn makeParserThunk(function) {
    return makeObject(PegThunk, SECRET, {function})
};


