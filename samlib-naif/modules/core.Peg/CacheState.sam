##
## `CacheState` class
##

#= language core.Lang0

import core.Generator :: stdCollect, stdFetch;

import ./VoidState :: voidState;


##
## Class Definition
##
## Payload: {item: ., nextState: lazy}

## Secrets used to control access to this class.
def ACCESS = @ACCESS.toUnlisted();
def NEW = @NEW.toUnlisted();

export class CacheState
        access: ACCESS,
        new: NEW {
    ## Documented in spec.
    class.new(tokens) {
        def item;
        def rest = ifValueOr { tokens.nextValue(item?) }
            { return voidState };
        def nextState = Lazy.new { this.new(rest) };

        return this.(NEW)(@{item, nextState})
    };

    ## Documented in spec.
    .applyRule(rule, box, items) {
        return? rule.parse(box, this, items)
    };
};
