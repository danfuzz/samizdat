##
## `CacheState` class
##

#= language core.Lang0


##
## Class Definition
##
## Payload:
##   input: generator
##   context: [item*]
##   shifted: lazy<state>
##   parses:  box<map>

## Secrets used to control access to this class.
def ACCESS = @ACCESS.toUnlisted();
def NEW = @NEW.toUnlisted();

export class CacheState
        access: ACCESS,
        new: NEW {
    ## Documented in spec.
    class.new(input) {
        return this.fullNew(input, [])
    };

    ## Documented in spec.
    class.fullNew(input, context) {
        def shifted {
            def result;
            If.value { input.nextValue(result?) }
                { newInput -> this.fullNew(newInput, [context*, result]) }
        };

        var parses = {};

        return this.(NEW)(@{
            input,
            context,
            shifted: shifted?,
            parses: parses?})
    };

    ## Documented in spec.
    .addContext(item) {
        def data = this.(ACCESS)();
        return CacheState.fullNew(data::input, [data::context*, item])
    };

    ## Documented in spec.
    .applyRule(rule) {
        def data = this.(ACCESS)();
        def parses = data::parses;

        return? If.value { (parses*).get(rule) }
            { result -> result* }
            {
                def result = rule.parse(this)?;
                parses* := {(parses*)*, (rule): result};
                result*
            }
    };

    ## Documented in spec.
    .get_context() {
        return this.(ACCESS)()::context
    };

    ## Documented in spec.
    .shiftInput() {
        return? this.(ACCESS)()::shifted*
    };

    ## Documented in spec.
    .withContext(context) {
        def data = this.(ACCESS)();
        return CacheState.fullNew(data::input, context)
    };
};
