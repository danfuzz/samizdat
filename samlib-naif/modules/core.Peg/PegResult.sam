#= language core.Lang0


##
## Class Definition
##
## Payload: {value: .}

## Secrets used to control access to this class.
def ACCESS = @ACCESS.toUnlisted();
def NEW = @NEW.toUnlisted();

export class PegResult
        access: ACCESS,
        new: NEW {
    ## Documented in spec.
    .parse(box, input, .*) {
        def data = this.(ACCESS)();
        box* := data::value;
        return input
    };
};


##
## Exported Definitions
##

## Documented in spec.
export fn makeResult(value) {
    return PegResult.(NEW)(@{value})
};

## Documented in spec.
export def empty = makeResult(null);
