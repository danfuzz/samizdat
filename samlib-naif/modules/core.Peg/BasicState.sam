##
## `BasicState` class
##

#= language core.Lang0


##
## Class Definition
##
## Payload: {input: generator, context: [items*]}

## Secrets used to control access to this class.
def ACCESS = @ACCESS.toUnlisted();
def NEW = @NEW.toUnlisted();

export class BasicState
        access: ACCESS,
        new: NEW {
    ## Documented in spec.
    class.new(input) {
        return this.(NEW)(@{input, context: []})
    };

    ## Documented in spec.
    .addContext(item) {
        def data = this.(ACCESS)();
        return this.(NEW)(@{data*, context: [data::context*, item]})
    };

    ## Documented in spec.
    .applyRule(rule) {
        return? rule.parse(this)
    };

    ## Documented in spec.
    .get_context() {
        return this.(ACCESS)()::context
    };

    ## Documented in spec.
    .shiftInput() {
        def data = this.(ACCESS)();
        def result;
        return? ifValue { data::input.nextValue(result?) }
            { input ->
                this.(NEW)(@{input, context: [data::context*, result]})
            }
    };

    ## Documented in spec.
    .withContext(context) {
        def data = this.(ACCESS)();
        return this.(NEW)(@{data*, context})
    };
};
