##
## Booleans
##

#= language core.Lang0

import core.Bitwise :: *;


##
## Exported Definitions
##

## Documented in spec.
fn @@Boolean.and(other) {
    return @Boolean{value: and(this::value, other::value)}
};

## Documented in spec.
fn @@Boolean.bit(n) {
    return bit(this::value, n)
};

## Documented in spec.
fn @@Boolean.bitSize() {
    return 1
};

## Documented in spec.
fn @@Boolean.not() {
    return @Boolean{value: xor(this::value, 1)}
};

## Documented in spec.
fn @@Boolean.or(other) {
    return @Boolean{value: or(this::value, other::value)}
};

## Documented in spec.
fn @@Boolean.shl(n) {
    def newValue = shl(this::value, n);

    return ifValueOr { get({0: false, 1: true}, newValue) }
        { die("Undefined boolean shift result.") }
};

## Documented in spec.
fn @@Boolean.toInt() {
    return this::value
};

## Documented in spec.
fn @@Boolean.toNumber() {
    return this::value
};

## Documented in spec.
fn @@Boolean.xor(other) {
    return @Boolean{value: xor(this::value, other::value)}
};
