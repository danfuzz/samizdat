## Value stringification
##

#= language core.Lang0

import core.Generator :: filterAll, filterPump, makeFilterGenerator;
import core.Range :: makeInclusiveRange;
import core.Sequence :: sliceInclusive;
import proto.Number :: div, mod, neg, sign;


##
## Private Definitions
