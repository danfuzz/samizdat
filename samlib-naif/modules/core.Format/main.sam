## Value stringification
##

#= language core.Lang0

def $Generator = moduleLoad("core.Generator");
def $Number    = moduleLoad("proto.Number");
def $Range     = moduleLoad("core.Range");
def $Sequence  = moduleLoad("core.Sequence");


