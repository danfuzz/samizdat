##
## String utilities
##

#= language core.Lang0

import core.Range :: ClosedRange;

import ./int :: intWithBase;


## The first Unicode surrogate code point.
def CHAR_SURROGATE_START = cast(String, 55296);  ## U+D800

## The last Unicode surrogate code point.
def CHAR_SURROGATE_END = cast(String, 57343);    ## U+DFFF

## The last Unicode code point.
def CHAR_UNICODE_END = cast(String, 1114111);   ## U+10FFFF

## Map of special-case characters to either their stringified forms or
## to `"x"` to indicate a need to convert as hex.
def SPECIAL_CHARS = {
    (ClosedRange.newInclusive(cast(String, 1), cast(String, 31)))*: "x",
    (ClosedRange.newInclusive(cast(String, 127), cast(String, 159)))*: "x",
    cast(String, 65534): "x",
    cast(String, 65535): "x",
    "\0": "\\0",
    "\n": "\\n",
    "\r": "\\r",
    "\t": "\\t",
    "\"": "\\\"",
    "\\": "\\\\"
};

## Does hex character conversion.
fn hexStringChar(ch) {
    return "\\x".cat(intWithBase(cast(Int, ch), 16), ";")
};

## Helper for stringifying strings: Returns the converted form of the
## given character.
export fn stringChar(ch) {
    ifValue { SPECIAL_CHARS.get(ch) }
        { special ->
            ifIs { eq(special, "x") }
                { return hexStringChar(ch) }
                { return special }
        };

    ifIs { lt(ch, CHAR_SURROGATE_START) }
        { return ch };

    ifIs { le(ch, CHAR_SURROGATE_END) }
        { return hexStringChar(ch) };

    return ifIs { le(ch, CHAR_UNICODE_END) }
        { ch }
        { hexStringChar(ch) }
};
