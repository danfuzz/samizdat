##
## `humanString`
##

#= language core.Lang0

import core.Generator :: FilterGenerator;

import ./sourceGeneral :: sourceGeneral;


## Function for producing a human-oriented string of the argument.
export fn humanString(value) {
    return ifSwitch(
        { classOf(value) },
        {
            (List): { . ->
                def elems = FilterGenerator.new(value)
                    { elem -> humanString(elem) };
                "".cat(elems*)
            },

            (String): { . ->
                value
            }
        },
        { . -> sourceGeneral(value, true) }
    )
};
