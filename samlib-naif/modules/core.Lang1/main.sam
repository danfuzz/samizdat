##
## Layer 1 parsing and evaluation functions
##

def $Lang0 = moduleLoad(["core", "Lang0"]);


##
## Exported Definitions
##

## This just re-exports stuff defined in intramodule files, as well as
## `evalBinary` which is a re-export from `Lang0`.

def $convert = intraLoad("convert");
export def convertToLang0 = $convert::convertToLang0;

def $eval = intraLoad("eval");
export def eval = $eval::eval;

def $parse = intraLoad("parse");
export def parseProgram    = $parse::parseProgram;
export def parseExpression = $parse::parseExpression;

def $tokenize = intraLoad("tokenize");
export def tokenize = $tokenize::tokenize;

export def evalBinary = $Lang0::evalBinary;
export def languageOf = $Lang0::languageOf;
