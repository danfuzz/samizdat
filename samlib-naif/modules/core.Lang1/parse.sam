##
## Private Definitions
##

## Reports the given list of pending tokens as part of error processing.
fn reportError(pending) {
    note("Pending tokens:");

    filterPump(pending, ClosedRange.newInclusive(1, 50))
        { token, . -> note("    ", $Format::source(token)) };

    die("\nExtra tokens at end of program.")
};


##
## Grammar rules
##
## The following is a near-transliteration of the tree grammar in
## the Samizdat Layer 0 and Samizdat Layer 1 specifications.
##

##
## Samizdat Layer 0 definitions
##

## Forward declaration required for integrating layer 1 definitions.
def parPexBlock;

## Forward declarations.
def parAssignExpression;
def parRawClosure;

## Forward declaration for the "top" rule which parses operator expressions.
## This gets bound to `parUnaryExpression` in the Layer 0 and 1 grammars, but
## it's different in Layer 2.
def parOpExpression;

## Documented in spec.
def parExpression = PegMain.newChoice(
    PegThunk.new { parAssignExpression });

## Documented in spec.
def parParenExpression = PegMain.newSequence(
    makeToken(@"("),
    parExpression,
    makeToken(@")"),
    PegCode.new { ., ex, . -> withoutIntermediates(ex) });

## Documented in spec.
def parNameSymbol = PegMain.newSequence(
    makeToken(@identifier),
    PegCode.new { nameIdent -> nameIdent::value });

## Documented in spec.
def parNameSymbolList = PegMain.newSequence(
    parNameSymbol,
    PegRepeat.new(PegSequence.new(makeToken(@","), parNameSymbol)),
    PegCode.new { first, rest -> [first, rest*] });

## Documented in spec.
def parVarLvalue = PegMain.newSequence(
    parNameSymbol,
    PegCode.new { name -> makeVarFetchGeneral(name) });

## Documented in spec.
def parIdentifierSymbol = PegMain.newChoice(
    PegSequence.new(
        makeToken(@string),
        PegCode.new { s -> makeSymbolLiteral(s::value) }),
    PegSequence.new(
        parNameSymbol,
        PegCode.new { name -> makeLiteral(name) }),
    PegSequence.new(
        any,
        PegCode.new { token ->
            def name = token.get_name();
            ifIs { KEYWORDS.get(name) }
                { makeLiteral(name) }
        }));

## Documented in spec.
def parKeyLiteral = PegMain.newChoice(
    PegSequence.new(
        makeToken(@string),
        PegCode.new { s -> makeLiteral(s::value) }),
    parIdentifierSymbol);

## Documented in spec.
def parLiteral = PegMain.newChoice(
    PegSequence.new(
        makeToken(@"-"),
        makeToken(@int),
        PegCode.new { ., i -> makeLiteral(i::value.neg()) }),
    PegSequence.new(
        makeToken(@int),
        PegCode.new { i -> makeLiteral(i::value) }),
    PegSequence.new(
        makeToken(@string),
        PegCode.new { s -> makeLiteral(s::value) }),
    PegSequence.new(
        makeToken(@false),
        PegResult.new(LITS::false)),
    PegSequence.new(
        makeToken(@true),
        PegResult.new(LITS::true)),
    PegSequence.new(
        makeToken(@null),
        PegResult.new(LITS::null)),
    PegSequence.new(
        makeToken(@"@"),
        parIdentifierSymbol,
        PegLookaheadFailure.new(PegTokenSet.new(@"(", @"{")),
        PegCode.new { ., symbol, . -> symbol }));

## Documented in spec.
def parKey = PegMain.newChoice(
    PegSequence.new(
        parKeyLiteral,
        makeToken(@":"),
        PegCode.new { key, . -> key }),
    PegSequence.new(
        parExpression,
        makeToken(@":"),
        PegCode.new { key, . -> key }));

## Documented in spec.
def parMapping = PegMain.newChoice(
    PegSequence.new(
        PegRepeat.new(parKey, 1),
        parExpression,
        PegCode.new { keys, value ->
            @mapping{keys, value: withoutIntermediates(value)}
        }),
    PegSequence.new(
        parExpression,
        PegCode.new { value -> value::interpolate }),
    PegSequence.new(
        parNameSymbol,
        PegCode.new { name ->
            @mapping{keys: [makeLiteral(name)], value: makeVarFetch(name)}
        }));

## Documented in spec.
def parMappings = PegMain.newChoice(
    PegSequence.new(
        parMapping,
        PegRepeat.new(PegSequence.new(makeToken(@","), parMapping)),
        PegCode.new { one, rest -> [one, rest*] }),
    PegResult.new([]));

## Documented in spec.
def parMap = PegMain.newSequence(
    makeToken(@"{"),
    parMappings,
    makeToken(@"}"),
    PegCode.new { ., mappings, . -> makeMapExpression(mappings*) });

## Documented in spec.
def parSymbolTable = PegMain.newSequence(
    makeToken(@"@"),
    makeToken(@"{"),
    parMappings,
    makeToken(@"}"),
    PegCode.new { ., ., mappings, . -> makeSymbolTableExpression(mappings*) });

## Documented in spec.

## Documented in spec.
def parRecord = PegMain.newSequence(
    makeToken(@"@"),
    PegChoice.new(
        parIdentifierSymbol,
        parParenExpression),
    PegChoice.new(
        parParenExpression,
        PegSequence.new(
            makeToken(@"{"),
            parMappings,
            makeToken(@"}"),
            PegCode.new { ., ., ., mappings, . ->
                makeSymbolTableExpression(mappings*)
            })),
    PegCode.new { ., name, value ->
        makeCall(LITS::Record, SYMS::new, name, value)
    });

## Documented in spec.
def parListItem = PegMain.newSequence(
    parExpression,
    PegRepeat.new(
        PegSequence.new(
            makeToken(@":"),
            PegCode.new { ., . ->
                die("Mapping syntax not valid as a list item or call argument.")
            }),
        0, 1),
    PegCode.new { expr, . -> expr });

## Documented in spec.
def parUnadornedList = PegMain.newChoice(
    PegSequence.new(
        parListItem,
        PegRepeat.new(
            PegSequence.new(makeToken(@","), parListItem)),
        PegCode.new { one, rest -> [one, rest*] }),
    PegResult.new([]));

## Documented in spec.
def parList = PegMain.newSequence(
    makeToken(@"["),
    parUnadornedList,
    makeToken(@"]"),
    PegCode.new { ., expressions, . ->
        ifIs { eq(expressions, []) }
            { LITS::EMPTY_LIST }
            { makeCallGeneral(LITS::List, SYMS::new, expressions*) }
    });

## Documented in spec.
def parFullClosure = PegMain.newSequence(
    PegLookaheadSuccess.new(makeToken(@"{")),
    PegThunk.new { . -> parRawClosure },
    PegCode.new { ., raw ->
        def closure = makeFullClosure(raw);
        withoutTops(closure)
    });

## Documented in spec.
def parBasicClosure = PegMain.newSequence(
    PegLookaheadSuccess.new(makeToken(@"{")),
    PegThunk.new { . -> parRawClosure },
    PegCode.new { ., raw ->
        def closure = makeBasicClosure(raw);
        withoutTops(closure)
    });

## Documented in spec.
def parNullaryClosure = PegMain.newSequence(
    parFullClosure,
    PegCode.new { c ->
        ifIs { ne(c::formals, []) }
            { die("Invalid formal argument in code block.") };
        c
    });

## Documented in spec.
def parBasicNullaryClosure = PegMain.newSequence(
    parBasicClosure,
    PegCode.new { c ->
        ifIs { ne(c::formals, []) }
            { die("Invalid formal argument in code block.") };
        c
    });

## Documented in spec.
def parTerm = PegMain.newChoice(
    parVarLvalue, parLiteral, parSymbolTable, parMap,
    parList, parRecord, parFullClosure, parParenExpression,
    ## Defined by Samizdat Layer 1. The lookahead is just to make
    ## it clear what is required to "jump into" Layer 1 parsing.
    PegSequence.new(
        PegLookaheadSuccess.new(makeToken(@"{:")),
        PegThunk.new { . -> parPexBlock }));

## Documented in spec.
def parActualsList = PegMain.newChoice(
    PegSequence.new(
        makeToken(@"("),
        parUnadornedList,
        makeToken(@")"),
        PegRepeat.new(parFullClosure),
        PegCode.new { ., normalActuals, ., closureActuals ->
            [closureActuals*, normalActuals*]
        }),
    PegRepeat.new(parFullClosure, 1));

## Documented in spec.
def parPostfixOperator = PegMain.newChoice(
    PegSequence.new(
        parActualsList,
        PegCode.new { actuals ->
            { node -> makeFunCallGeneral(node, actuals*) }
        }),
    PegSequence.new(
        makeToken(@"::"),
        parKeyLiteral,
        PegCode.new { ., key -> { node -> makeGet(node, key) } }),
    PegSequence.new(
        makeToken(@"*"),
        PegCode.new { . -> { node -> makeInterpolate(node) } }),
    PegSequence.new(
        makeToken(@"?"),
        PegCode.new { . -> { node -> makeMaybeValue(node) } }),
    PegSequence.new(
        makeToken(@"."),
        PegChoice.new(
            PegSequence.new(
                parNameSymbol,
                PegCode.new { ., symbol -> makeLiteral(symbol) }),
            parParenExpression),
        parActualsList,
        PegCode.new { ., name, actuals ->
            { node -> makeCallGeneral(node, name, actuals*) }
        }),
    PegSequence.new(
        makeToken(@"."),
        parNameSymbol,
        PegCode.new { ., name ->
            def getterRef = makeSymbolLiteral("get_".cat(name));
            { node ->
                def getterCall = makeCall(node, getterRef);
                @(getterCall.get_name()){
                    getterCall*,
                    lvalue: { expr ->
                        def setterRef = makeSymbolLiteral("set_".cat(name));
                        makeCall(node, setterRef, expr)
                    }
                }
            }
        }));

## Documented in spec.
def parUnaryExpression = PegMain.newSequence(
    PegChoice.new(
        PegSequence.new(
            parTerm,
            PegCode.new { base -> {base, prefixes: []} }),
        ## This is a stub representing the layer 2 part of the rule.
        fail),
    PegRepeat.new(parPostfixOperator),
    PegCode.new { basePrefixes, postfixes ->
        def prefixes = basePrefixes::prefixes;
        var result = basePrefixes::base;

        filterPump(postfixes) { op -> result := op(result) };
        filterPump(prefixes) { op -> result := op(result) };
        result
    });

## Documented in spec.
parAssignExpression := PegMain.newSequence(
    PegThunk.new { parOpExpression },
    PegChoice.new(
        PegSequence.new(
            makeToken(@":="),
            parExpression,
            PegCode.new { target, ., value ->
                makeAssignmentIfPossible(target, value)
            }),
        PegCode.new { target -> target }));

## Documented in spec.
def parYieldOrNonlocal = PegMain.newSequence(
    PegTokenSet.new(@break, @continue, @return, @yield),
    PegRepeat.new(makeToken(@"?"), 0, 1),
    PegChoice.new(
        PegSequence.new(
            PegCode.new { op, . -> op.hasName(@yield) },
            PegChoice.new(
                PegSequence.new(makeToken(@"/"), parVarLvalue),
                PegResult.new(@yield{}))),
        PegCode.new { op, . -> makeVarFetch(op.get_name()) }),
    PegChoice.new(
        PegSequence.new(
            parExpression,
            PegCode.new { ., optQuest, ., v ->
                ifIs { optQuest* } { makeMaybe(v) } { v }
            }),
        PegCode.new { ., optQuest, . ->
            ifNot { optQuest* } { @void{} }
        }),
    PegCode.new { ., ., name, value ->
        ifIs { eq(name, @yield{}) }
            { value }
            { makeNonlocalExit(name, value) }
    });

## Documented in spec.
def parVarDef = PegMain.newSequence(
    makeToken(@def),
    parNameSymbol,
    PegRepeat.new(PegSequence.new(makeToken(@"="), parExpression), 0, 1),
    PegCode.new { ., name, optExpr ->
        makeVarDef(name, optExpr*)
    });

## Documented in spec.
def parVarDefMutable = PegMain.newSequence(
    makeToken(@var),
    parNameSymbol,
    PegRepeat.new(PegSequence.new(makeToken(@"="), parExpression), 0, 1),
    PegCode.new { ., name, optExpr ->
        makeVarDefMutable(name, optExpr*)
    });

## Documented in spec.
def parYieldDef = PegMain.newSequence(
    makeToken(@"/"),
    parNameSymbol);

## Documented in spec.
def parOptYieldDef = PegMain.newChoice(
    PegSequence.new(
        parYieldDef,
        PegCode.new { y -> @{yieldDef: y} }),
    PegResult.new(@{}));

## Documented in spec.
def parFormal = PegMain.newSequence(
    PegChoice.new(
        PegSequence.new(
            parNameSymbol,
            PegCode.new { n -> @{name: n} }),
        PegSequence.new(
            makeToken(@"."),
            PegResult.new(@{}))),
    PegChoice.new(
        PegSequence.new(
            PegTokenSet.new(@"?", @"*", @"+"),
            PegCode.new { ., r -> @{repeat: r.get_name()} }),
        PegResult.new(@{})),
    PegCode.new { name, repeat -> @{name*, repeat*} });

## Documented in spec.
def parFormalsList = PegMain.newChoice(
    PegSequence.new(
        parFormal,
        PegRepeat.new(PegSequence.new(makeToken(@","), parFormal)),
        PegCode.new { one, rest -> [one, rest*] }),
    PegResult.new([]));

## Documented in spec.
def parClosureDeclarations = PegMain.newChoice(
    PegSequence.new(
        PegChoice.new(
            PegSequence.new(
                PegChoice.new(
                    PegSequence.new(
                        parNameSymbol,
                        PegCode.new { n -> @{name: n} }),
                    PegResult.new(@{})),
                makeToken(@"("),
                parFormalsList,
                makeToken(@")"),
                PegCode.new { name, ., formals, . -> @{name*, formals} }),
            PegSequence.new(
                parFormalsList,
                PegCode.new { formals -> @{formals} })),
        parOptYieldDef,
        makeToken(@"->"),
        PegCode.new { most, yieldDef, . -> @{most*, yieldDef*} }),
    PegResult.new(@{formals: []}));

## Documented in spec.
def parFunctionCommon = PegMain.newSequence(
    parNameSymbol,
    makeToken(@"("),
    parFormalsList,
    makeToken(@")"),
    parBasicNullaryClosure,
    PegCode.new { name, ., formals, ., code ->
        def basic = withName(
            withFormals(
                withYieldDef(code, @return),
                formals),
            name);

        makeFullClosure(basic)
    });

## Documented in spec.
def parFunctionDef = PegMain.newSequence(
    makeToken(@fn),
    parFunctionCommon,
    PegCode.new { ., closure ->
        withTop(makeVarDef(closure::name, closure))
    });

## Documented in spec.
def parAttribute = PegMain.newSequence(
    parNameSymbol,
    makeToken(@":"),
    parTerm,
    PegCode.new { key, ., value -> @{(key): value} });

## Documented in spec.
def parMethodDef = PegMain.newSequence(
    PegChoice.new(
        PegSequence.new(makeToken(@class), PegResult.new(@classMethod)),
        PegResult.new(@instanceMethod)),
    makeToken(@"."),
    parFunctionCommon,
    PegCode.new { scope, ., baseClosure ->
        def closure =
            withFormals(baseClosure, [@{name: @this}, baseClosure::formals*]);
        @(scope){closure*}
    });

## Documented in spec.
def parClassDef = PegMain.newSequence(
    makeToken(@class),
    parNameSymbol,
    PegChoice.new(
        PegSequence.new(
            parAttribute,
            PegRepeat.new(PegSequence.new(makeToken(@","), parAttribute)),
            PegCode.new { ., ., first, rest -> [first, rest*] }),
        PegResult.new([])),
    makeToken(@"{"),
    PegRepeat.new(makeToken(@";")),
    PegChoice.new(
        PegSequence.new(
            parMethodDef,
            PegRepeat.new(
                PegSequence.new(PegRepeat.new(makeToken(@";"), 1), parMethodDef)),
            PegCode.new { ., ., ., ., ., first, rest -> [first, rest*] }),
        PegResult.new([])),
    makeToken(@"}"),
    PegCode.new { ., name, attributes, ., ., methods, . ->
        makeClassDef(name, attributes, methods)
    });

## Documented in spec.
def parImportName = PegMain.newChoice(
    PegSequence.new(
        parNameSymbol,
        PegChoice.new(
            PegSequence.new(
                makeToken(@"*"),
                PegResult.new(@prefix)),
            PegResult.new(@name)),
        makeToken(@"="),
        PegCode.new { name, key, . -> @{(key): name} }),
    PegResult.new(@{}));

## Documented in spec.
def parImportFormat = PegMain.newChoice(
    PegSequence.new(
        makeToken(@"@"),
        parIdentifierSymbol,
        PegCode.new { ., f -> @{format: f::value} }),
    PegResult.new(@{}));

## Documented in spec.
def parImportSource = PegMain.newChoice(
    PegSequence.new(
        makeToken(@"."),
        makeToken(@"/"),
        parNameSymbol,
        PegRepeat.new(
            PegSequence.new(
                makeToken(@"/"),
                parNameSymbol,
                PegCode.new { ., ., ., ., n -> "/".cat(n) })),
        PegRepeat.new(
            PegSequence.new(
                makeToken(@"."),
                parNameSymbol,
                PegCode.new { ., ., ., ., ., n -> ".".cat(n) }),
