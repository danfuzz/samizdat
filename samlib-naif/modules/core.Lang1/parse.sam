#= language core.Lang0

import core.Format;
import core.Generator :: filterPump;
import core.LangNode :: *;
import core.Peg :: *;
import core.Range :: ClosedRange;

import ./tokenize :: tokenize;


##
## Private Definitions
##

## Reports the given list of pending tokens as part of error processing.
fn reportError(pending) {
    note("Pending tokens:");

    filterPump(pending, ClosedRange.newInclusive(1, 50))
        { token, . -> note("    ", $Format::source(token)) };

    die("\nExtra tokens at end of program.")
};


##
## Grammar rules
##
## The following is a near-transliteration of the tree grammar in
## the Samizdat Layer 0 and Samizdat Layer 1 specifications.
##

##
## Samizdat Layer 0 definitions
##

## Forward declaration required for integrating layer 1 definitions.
def parPexBlock;

## Forward declarations.
def parAssignExpression;
def parRawClosure;

## Forward declaration for the "top" rule which parses operator expressions.
## This gets bound to `parUnaryExpression` in the Layer 0 and 1 grammars, but
## it's different in Layer 2.
def parOpExpression;

## Documented in spec.
def parExpression = makeMainChoice(
    makeParserThunk { parAssignExpression });

## Documented in spec.
def parParenExpression = makeMainSequence(
    makeToken(@"("),
    parExpression,
    makeToken(@")"),
    makeCode { ., ex, . -> withoutIntermediates(ex) });

## Documented in spec.
def parNameSymbol = makeMainSequence(
    makeToken(@identifier),
    makeCode { nameIdent -> nameIdent::value });

## Documented in spec.
def parNameSymbolList = makeMainSequence(
    parNameSymbol,
    makeRepeat(PegSequence.new(makeToken(@","), parNameSymbol)),
    makeCode { first, rest -> [first, rest*] });

## Documented in spec.
def parVarLvalue = makeMainSequence(
    parNameSymbol,
    makeCode { name -> makeVarFetchGeneral(name) });

## Documented in spec.
def parIdentifierSymbol = makeMainChoice(
    PegSequence.new(
        makeToken(@string),
        makeCode { s -> makeSymbolLiteral(s::value) }),
    PegSequence.new(
        parNameSymbol,
        makeCode { name -> makeLiteral(name) }),
    PegSequence.new(
        any,
        makeCode { token ->
            def name = token.get_name();
            ifIs { KEYWORDS.get(name) }
                { makeLiteral(name) }
        }));

## Documented in spec.
def parKeyLiteral = makeMainChoice(
    PegSequence.new(
        makeToken(@string),
        makeCode { s -> makeLiteral(s::value) }),
    parIdentifierSymbol);

## Documented in spec.
def parLiteral = makeMainChoice(
    PegSequence.new(
        makeToken(@"-"),
        makeToken(@int),
        makeCode { ., i -> makeLiteral(i::value.neg()) }),
    PegSequence.new(
        makeToken(@int),
        makeCode { i -> makeLiteral(i::value) }),
    PegSequence.new(
        makeToken(@string),
        makeCode { s -> makeLiteral(s::value) }),
    PegSequence.new(
        makeToken(@false),
        makeResult(LITS::false)),
    PegSequence.new(
        makeToken(@true),
        makeResult(LITS::true)),
    PegSequence.new(
        makeToken(@null),
        makeResult(LITS::null)),
    PegSequence.new(
        makeToken(@"@"),
        parIdentifierSymbol,
        makeLookaheadFailure(makeTokenSet(@"(", @"{")),
        makeCode { ., symbol, . -> symbol }));

## Documented in spec.
def parKey = makeMainChoice(
    PegSequence.new(
        parKeyLiteral,
        makeToken(@":"),
        makeCode { key, . -> key }),
    PegSequence.new(
        parExpression,
        makeToken(@":"),
        makeCode { key, . -> key }));

## Documented in spec.
def parMapping = makeMainChoice(
    PegSequence.new(
        makeRepeat(parKey, 1),
        parExpression,
        makeCode { keys, value ->
            @mapping{keys, value: withoutIntermediates(value)}
        }),
    PegSequence.new(
        parExpression,
        makeCode { value -> value::interpolate }),
    PegSequence.new(
        parNameSymbol,
        makeCode { name ->
            @mapping{keys: [makeLiteral(name)], value: makeVarFetch(name)}
        }));

## Documented in spec.
def parMappings = makeMainChoice(
    PegSequence.new(
        parMapping,
        makeRepeat(PegSequence.new(makeToken(@","), parMapping)),
        makeCode { one, rest -> [one, rest*] }),
    makeResult([]));

## Documented in spec.
def parMap = makeMainSequence(
    makeToken(@"{"),
    parMappings,
    makeToken(@"}"),
    makeCode { ., mappings, . -> makeMapExpression(mappings*) });

## Documented in spec.
def parSymbolTable = makeMainSequence(
    makeToken(@"@"),
    makeToken(@"{"),
    parMappings,
    makeToken(@"}"),
    makeCode { ., ., mappings, . -> makeSymbolTableExpression(mappings*) });

## Documented in spec.

## Documented in spec.
def parRecord = makeMainSequence(
    makeToken(@"@"),
    PegChoice.new(
        parIdentifierSymbol,
        parParenExpression),
    PegChoice.new(
        parParenExpression,
        PegSequence.new(
            makeToken(@"{"),
            parMappings,
            makeToken(@"}"),
            makeCode { ., ., ., mappings, . ->
                makeSymbolTableExpression(mappings*)
            })),
    makeCode { ., name, value ->
        makeCall(LITS::Record, SYMS::new, name, value)
    });

## Documented in spec.
def parListItem = makeMainSequence(
    parExpression,
    makeRepeat(
        PegSequence.new(
            makeToken(@":"),
            makeCode { ., . ->
                die("Mapping syntax not valid as a list item or call argument.")
            }),
        0, 1),
    makeCode { expr, . -> expr });

## Documented in spec.
def parUnadornedList = makeMainChoice(
    PegSequence.new(
        parListItem,
        makeRepeat(
            PegSequence.new(makeToken(@","), parListItem)),
        makeCode { one, rest -> [one, rest*] }),
    makeResult([]));

## Documented in spec.
def parList = makeMainSequence(
    makeToken(@"["),
    parUnadornedList,
    makeToken(@"]"),
    makeCode { ., expressions, . ->
        ifIs { eq(expressions, []) }
            { LITS::EMPTY_LIST }
            { makeCallGeneral(LITS::List, SYMS::new, expressions*) }
    });

## Documented in spec.
def parFullClosure = makeMainSequence(
    makeLookaheadSuccess(makeToken(@"{")),
    makeParserThunk { . -> parRawClosure },
    makeCode { ., raw ->
        def closure = makeFullClosure(raw);
        withoutTops(closure)
    });

## Documented in spec.
def parBasicClosure = makeMainSequence(
    makeLookaheadSuccess(makeToken(@"{")),
    makeParserThunk { . -> parRawClosure },
    makeCode { ., raw ->
        def closure = makeBasicClosure(raw);
        withoutTops(closure)
    });

## Documented in spec.
def parNullaryClosure = makeMainSequence(
    parFullClosure,
    makeCode { c ->
        ifIs { ne(c::formals, []) }
            { die("Invalid formal argument in code block.") };
        c
    });

## Documented in spec.
def parBasicNullaryClosure = makeMainSequence(
    parBasicClosure,
    makeCode { c ->
        ifIs { ne(c::formals, []) }
            { die("Invalid formal argument in code block.") };
        c
    });

## Documented in spec.
def parTerm = makeMainChoice(
    parVarLvalue, parLiteral, parSymbolTable, parMap,
    parList, parRecord, parFullClosure, parParenExpression,
    ## Defined by Samizdat Layer 1. The lookahead is just to make
    ## it clear what is required to "jump into" Layer 1 parsing.
    PegSequence.new(
        makeLookaheadSuccess(makeToken(@"{:")),
        makeParserThunk { . -> parPexBlock }));

## Documented in spec.
def parActualsList = makeMainChoice(
    PegSequence.new(
        makeToken(@"("),
        parUnadornedList,
        makeToken(@")"),
        makeRepeat(parFullClosure),
        makeCode { ., normalActuals, ., closureActuals ->
            [closureActuals*, normalActuals*]
        }),
    makeRepeat(parFullClosure, 1));

## Documented in spec.
def parPostfixOperator = makeMainChoice(
    PegSequence.new(
        parActualsList,
        makeCode { actuals ->
            { node -> makeFunCallGeneral(node, actuals*) }
        }),
    PegSequence.new(
        makeToken(@"::"),
        parKeyLiteral,
        makeCode { ., key -> { node -> makeGet(node, key) } }),
    PegSequence.new(
        makeToken(@"*"),
        makeCode { . -> { node -> makeInterpolate(node) } }),
    PegSequence.new(
        makeToken(@"?"),
        makeCode { . -> { node -> makeMaybeValue(node) } }),
    PegSequence.new(
        makeToken(@"."),
        PegChoice.new(
            PegSequence.new(
                parNameSymbol,
                makeCode { ., symbol -> makeLiteral(symbol) }),
            parParenExpression),
        parActualsList,
        makeCode { ., name, actuals ->
            { node -> makeCallGeneral(node, name, actuals*) }
        }),
    PegSequence.new(
        makeToken(@"."),
        parNameSymbol,
        makeCode { ., name ->
            def getterRef = makeSymbolLiteral("get_".cat(name));
            { node ->
                def getterCall = makeCall(node, getterRef);
                @(getterCall.get_name()){
                    getterCall*,
                    lvalue: { expr ->
                        def setterRef = makeSymbolLiteral("set_".cat(name));
                        makeCall(node, setterRef, expr)
                    }
                }
            }
        }));

## Documented in spec.
def parUnaryExpression = makeMainSequence(
    PegChoice.new(
        PegSequence.new(
            parTerm,
            makeCode { base -> {base, prefixes: []} }),
        ## This is a stub representing the layer 2 part of the rule.
        fail),
    makeRepeat(parPostfixOperator),
    makeCode { basePrefixes, postfixes ->
        def prefixes = basePrefixes::prefixes;
        var result = basePrefixes::base;

        filterPump(postfixes) { op -> result := op(result) };
        filterPump(prefixes) { op -> result := op(result) };
        result
    });

## Documented in spec.
parAssignExpression := makeMainSequence(
    makeParserThunk { parOpExpression },
    PegChoice.new(
        PegSequence.new(
            makeToken(@":="),
            parExpression,
            makeCode { target, ., value ->
                makeAssignmentIfPossible(target, value)
            }),
        makeCode { target -> target }));

## Documented in spec.
def parYieldOrNonlocal = makeMainSequence(
    makeTokenSet(@break, @continue, @return, @yield),
    makeRepeat(makeToken(@"?"), 0, 1),
    PegChoice.new(
        PegSequence.new(
            makeCode { op, . -> op.hasName(@yield) },
            PegChoice.new(
                PegSequence.new(makeToken(@"/"), parVarLvalue),
                makeResult(@yield{}))),
        makeCode { op, . -> makeVarFetch(op.get_name()) }),
    PegChoice.new(
        PegSequence.new(
            parExpression,
            makeCode { ., optQuest, ., v ->
                ifIs { optQuest* } { makeMaybe(v) } { v }
            }),
        makeCode { ., optQuest, . ->
            ifNot { optQuest* } { @void{} }
        }),
    makeCode { ., ., name, value ->
        ifIs { eq(name, @yield{}) }
            { value }
            { makeNonlocalExit(name, value) }
    });

## Documented in spec.
def parVarDef = makeMainSequence(
    makeToken(@def),
    parNameSymbol,
    makeRepeat(PegSequence.new(makeToken(@"="), parExpression), 0, 1),
    makeCode { ., name, optExpr ->
        makeVarDef(name, optExpr*)
    });

## Documented in spec.
def parVarDefMutable = makeMainSequence(
    makeToken(@var),
    parNameSymbol,
    makeRepeat(PegSequence.new(makeToken(@"="), parExpression), 0, 1),
    makeCode { ., name, optExpr ->
        makeVarDefMutable(name, optExpr*)
    });

## Documented in spec.
def parYieldDef = makeMainSequence(
    makeToken(@"/"),
    parNameSymbol);

## Documented in spec.
def parOptYieldDef = makeMainChoice(
    PegSequence.new(
        parYieldDef,
        makeCode { y -> @{yieldDef: y} }),
    makeResult(@{}));

## Documented in spec.
def parFormal = makeMainSequence(
    PegChoice.new(
        PegSequence.new(
            parNameSymbol,
            makeCode { n -> @{name: n} }),
        PegSequence.new(
            makeToken(@"."),
            makeResult(@{}))),
    PegChoice.new(
        PegSequence.new(
            makeTokenSet(@"?", @"*", @"+"),
            makeCode { ., r -> @{repeat: r.get_name()} }),
        makeResult(@{})),
    makeCode { name, repeat -> @{name*, repeat*} });

## Documented in spec.
def parFormalsList = makeMainChoice(
    PegSequence.new(
        parFormal,
        makeRepeat(PegSequence.new(makeToken(@","), parFormal)),
        makeCode { one, rest -> [one, rest*] }),
    makeResult([]));

## Documented in spec.
def parClosureDeclarations = makeMainChoice(
    PegSequence.new(
        PegChoice.new(
            PegSequence.new(
                PegChoice.new(
                    PegSequence.new(
                        parNameSymbol,
                        makeCode { n -> @{name: n} }),
                    makeResult(@{})),
                makeToken(@"("),
                parFormalsList,
                makeToken(@")"),
                makeCode { name, ., formals, . -> @{name*, formals} }),
            PegSequence.new(
                parFormalsList,
                makeCode { formals -> @{formals} })),
        parOptYieldDef,
        makeToken(@"->"),
        makeCode { most, yieldDef, . -> @{most*, yieldDef*} }),
    makeResult(@{formals: []}));

## Documented in spec.
def parFunctionCommon = makeMainSequence(
    parNameSymbol,
    makeToken(@"("),
    parFormalsList,
    makeToken(@")"),
    parBasicNullaryClosure,
    makeCode { name, ., formals, ., code ->
        def basic = withName(
            withFormals(
                withYieldDef(code, @return),
                formals),
            name);

        makeFullClosure(basic)
    });

## Documented in spec.
def parFunctionDef = makeMainSequence(
    makeToken(@fn),
    parFunctionCommon,
    makeCode { ., closure ->
        withTop(makeVarDef(closure::name, closure))
    });

## Documented in spec.
def parAttribute = makeMainSequence(
    parNameSymbol,
    makeToken(@":"),
    parTerm,
    makeCode { key, ., value -> @{(key): value} });

## Documented in spec.
def parMethodDef = makeMainSequence(
    PegChoice.new(
        PegSequence.new(makeToken(@class), makeResult(@classMethod)),
        makeResult(@instanceMethod)),
    makeToken(@"."),
    parFunctionCommon,
    makeCode { scope, ., baseClosure ->
        def closure =
            withFormals(baseClosure, [@{name: @this}, baseClosure::formals*]);
        @(scope){closure*}
    });

## Documented in spec.
def parClassDef = makeMainSequence(
    makeToken(@class),
    parNameSymbol,
    PegChoice.new(
        PegSequence.new(
            parAttribute,
            makeRepeat(PegSequence.new(makeToken(@","), parAttribute)),
            makeCode { ., ., first, rest -> [first, rest*] }),
        makeResult([])),
    makeToken(@"{"),
    makeRepeat(makeToken(@";")),
    PegChoice.new(
        PegSequence.new(
            parMethodDef,
            makeRepeat(
                PegSequence.new(makeRepeat(makeToken(@";"), 1), parMethodDef)),
            makeCode { ., ., ., ., ., first, rest -> [first, rest*] }),
        makeResult([])),
    makeToken(@"}"),
    makeCode { ., name, attributes, ., ., methods, . ->
        makeClassDef(name, attributes, methods)
    });

## Documented in spec.
def parImportName = makeMainChoice(
    PegSequence.new(
        parNameSymbol,
        PegChoice.new(
            PegSequence.new(
                makeToken(@"*"),
                makeResult(@prefix)),
            makeResult(@name)),
        makeToken(@"="),
        makeCode { name, key, . -> @{(key): name} }),
    makeResult(@{}));

## Documented in spec.
def parImportFormat = makeMainChoice(
    PegSequence.new(
        makeToken(@"@"),
        parIdentifierSymbol,
        makeCode { ., f -> @{format: f::value} }),
    makeResult(@{}));

## Documented in spec.
def parImportSource = makeMainChoice(
    PegSequence.new(
        makeToken(@"."),
        makeToken(@"/"),
        parNameSymbol,
        makeRepeat(
            PegSequence.new(
                makeToken(@"/"),
                parNameSymbol,
                makeCode { ., ., ., ., n -> "/".cat(n) })),
        makeRepeat(
            PegSequence.new(
                makeToken(@"."),
                parNameSymbol,
                makeCode { ., ., ., ., ., n -> ".".cat(n) }),
            0, 1),
        makeCode { ., ., first, rest, optSuffix ->
            def name = "".cat(first, rest*, optSuffix*);
            @internal{name}
        }),
    PegSequence.new(
        parNameSymbol,
        makeRepeat(
            PegSequence.new(
                makeToken(@"."),
                parNameSymbol,
                makeCode { ., ., n -> ".".cat(n) })),
        makeCode { first, rest ->
            def name = "".cat(first, rest*);
            @external{name}
        }));

## Documented in spec.
def parImportSelect = makeMainChoice(
    PegSequence.new(
        makeToken(@"::"),
        PegChoice.new(
            PegSequence.new(
                makeToken(@"*"),
                makeResult(@{select: @"*"})),
            PegSequence.new(
                parNameSymbolList,
                makeCode { ., select -> @{select} }))),
    makeResult(@{}));

## Documented in spec.
def parImportStatement = makeMainSequence(
    makeRepeat(makeToken(@export), 0, 1),
    makeToken(@import),
    parImportName,
    parImportFormat,
    parImportSource,
    parImportSelect,
    makeCode { optExport, ., nameOrPrefix, format, source, select ->
        def data = @{nameOrPrefix*, format*, select*, source};
        ifIs { optExport* }
            { makeExport(makeImport(data)) }
            { makeImport(data) }
    });

## Documented in spec.
def parExportableStatement = makeMainChoice(
    parClassDef, parFunctionDef, parVarDef);

## Documented in spec.
def parStatement = makeMainChoice(
    parExportableStatement, parVarDefMutable, parExpression);

## Documented in spec.
def parProgramStatement = makeMainChoice(
    parStatement,
    PegSequence.new(
        makeToken(@export),
        PegChoice.new(
            PegSequence.new(
                parNameSymbolList,
                makeCode { ., select -> makeExportSelection(select*) }),
            PegSequence.new(
                parExportableStatement,
                makeCode { ., stat -> makeExport(stat) }))));

## Documented in spec.
def parClosureBody = makeMainSequence(
    makeRepeat(makeToken(@";")),
    makeRepeat(
        makeMainSequence(
            parStatement,
            makeRepeat(makeToken(@";"), 1),
            makeCode { s, . -> s })),
    PegChoice.new(
        makeMainSequence(
            parStatement,
            makeCode { s -> @{statements: [s]} }),
        makeMainSequence(
            parYieldOrNonlocal,
            makeCode { y -> @{statements: [], yield: y} }),
        makeResult(@{statements: []})),
    makeRepeat(makeToken(@";")),
    makeCode { ., most, last, . ->
        @{last*, statements: [most*, last::statements*]}
    });

## Documented in spec.
parRawClosure := makeMainSequence(
    makeToken(@"{"),
    parClosureDeclarations,
    parClosureBody,
    makeToken(@"}"),
    makeCode { ., decls, body, . -> @{decls*, body*} });

## Documented in spec.
def parProgram = makeMainSequence(
    PegChoice.new(
        PegSequence.new(
            makeRepeat(makeToken(@";")),
            parImportStatement,
            makeRepeat(
                PegSequence.new(
                    makeRepeat(makeToken(@";"), 1),
                    parImportStatement)),
            makeCode { ., first, rest -> [first, rest*] }),
        makeResult([])),
    PegChoice.new(
        PegSequence.new(
            PegChoice.new(
                PegSequence.new(
                    makeCode { imports -> ne(imports, []) },
                    makeRepeat(makeToken(@";"), 1)),
                makeRepeat(makeToken(@";"))),
            parProgramStatement,
            makeRepeat(
                PegSequence.new(
                    makeRepeat(makeToken(@";"), 1),
                    parProgramStatement)),
            makeCode { ., ., first, rest -> [first, rest*] }),
        makeResult([])),
    makeRepeat(makeToken(@";")),
    makeCode { imports, body, . ->
        def closure = makeFullClosure(@{
            statements: [imports*, body*],
            yield:      @void{}
        });
        withoutTops(closure)
    });

## Documented in spec.
def parExpressionOrError = makeMainSequence(
    parExpression,
    makeRepeat(
        makeMainSequence(
            makeRepeat(any, 1),
            makeCode { pending -> reportError(pending) }),
        0, 1),
    makeCode { ex, . -> ex });

## Documented in spec.
def parProgramOrError = makeMainSequence(
    parProgram,
    makeRepeat(
        makeMainSequence(
            makeRepeat(any, 1),
            makeCode { pending -> reportError(pending) }),
        0, 1),
    makeCode { prog, . -> prog });


##
## Samizdat Layer 1 definitions
##

## `choicePex` is the top-level parsing expression node type.
def parPexChoice;

## Map from parser token types to record classes for pexes.
def PEX_TYPES = {
    @"&": @lookaheadSuccess,
    @"!": @lookaheadFailure,
    @"?": @opt,
    @"*": @star,
    @"+": @plus
};

## Documented in spec.
parPexBlock := makeMainSequence(
    makeToken(@"{:"),
    makeParserThunk { . -> parPexChoice },
    makeToken(@":}"),
    makeCode { ., pex, . -> @parser{pex} });

## Documented in spec.
def parPexParenExpression = makeMainSequence(
    makeToken(@"("),
    makeParserThunk { . -> parPexChoice },
    makeToken(@")"),
    makeCode { ., pex, . -> pex });

## Parses a variable reference parsing expression.
def parPexVarRef = makeMainSequence(
    parNameSymbol,
    makeCode { name -> makeVarRef(name) });

## Documented in spec.
def parPexString = makeMainSequence(makeToken(@string));

## Documented in spec.
def parPexToken = makeMainSequence(
    makeToken(@"@"),
    parIdentifierSymbol,
    makeCode { ., type ->
        @token{value: type::value}
    });

## Documented in spec.
def parPexSetString = makeMainSequence(
    makeToken(@string),
    PegChoice.new(
        PegSequence.new(
            makeToken(@".."),
            makeToken(@string),
            makeCode { s, ., end /out ->
                def startChar = s::value;
                def endChar = end::value;

                ## Reject non-single-character strings.
                ifIs { ne(1, startChar.get_size()) } { yield /out };
                ifIs { ne(1, endChar.get_size()) } { yield /out };

                yield "".cat(ClosedRange.newInclusive(startChar, endChar)*)
            }),
        makeCode { s -> s::value }));

## Documented in spec.
def parPexSet = makeMainSequence(
    makeToken(@"["),
    PegChoice.new(
        PegSequence.new(
            makeToken(@"!"),
            makeResult(@tokenSetComplement)),
        makeResult(@tokenSet)),
    PegChoice.new(
        makeMainSequence(
            makeRepeat(parPexSetString, 1),
            makeCode { strings ->
                "".cat(strings*).collect { ch -> cast(Symbol, ch) }
            }),
        makeMainSequence(
            makeRepeat(parPexToken, 1),
            makeCode { tokens -> tokens.collect({ n -> n::value }) }),
        makeResult([])),
    makeToken(@"]"),
    makeCode { ., type, terminals, . -> @(type){values: terminals} });

## Documented in spec.
def parPexCode = makeMainSequence(
    parNullaryClosure,
    makeCode { closure -> @code{closure*} });


## Documented in spec.
def parPexThunk = makeMainSequence(
    makeToken(@"%"),
    parTerm,
    makeCode { ., value -> @thunk{value} });

## Documented in spec.
def parPexTerm = makeMainChoice(
    PegSequence.new(
        makeToken(@"."),
        makeResult(@any{})),
    PegSequence.new(
        makeToken(@"("),
        makeToken(@")"),
        makeResult(@empty{})),
    parPexVarRef,
    parPexString,
    parPexToken,
    parPexSet,
    parPexCode,
    parPexThunk,
    parPexParenExpression);

## Documented in spec.
def parPexRepeat = makeMainSequence(
    parPexTerm,
    PegChoice.new(
        PegSequence.new(
            makeTokenSet(@"?", @"*", @"+"),
            makeCode { pex, repeat ->
                @(PEX_TYPES.get(repeat.get_name())){pex}
            }),
        makeCode { pex -> pex }));

## Documented in spec.
def parPexLookahead = makeMainChoice(
    PegSequence.new(
        makeTokenSet(@"&", @"!"),
        parPexRepeat,
        makeCode { lookahead, pex ->
            @(PEX_TYPES.get(lookahead.get_name())){pex}
        }),
    parPexRepeat);

## Documented in spec.
def parPexName = makeMainChoice(
    PegSequence.new(
        parNameSymbol,
        makeToken(@"="),
