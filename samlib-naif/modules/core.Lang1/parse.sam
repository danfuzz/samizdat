        ifIs { optExport* }
            { makeExport(makeImport(data)) }
            { makeImport(data) }
    });

## Documented in spec.
def parExportableStatement = PegMain.newChoice(
    parClassDef, parFunctionDef, parVarDef);

## Documented in spec.
def parStatement = PegMain.newChoice(
    parExportableStatement, parVarDefMutable, parExpression);

## Documented in spec.
def parProgramStatement = PegMain.newChoice(
    parStatement,
    PegSequence.new(
        makeToken(@export),
        PegChoice.new(
            PegSequence.new(
                parNameSymbolList,
                PegCode.new { ., select -> makeExportSelection(select*) }),
            PegSequence.new(
                parExportableStatement,
                PegCode.new { ., stat -> makeExport(stat) }))));

## Documented in spec.
def parClosureBody = PegMain.newSequence(
    PegRepeat.new(makeToken(@";")),
    PegRepeat.new(
        PegMain.newSequence(
            parStatement,
            PegRepeat.new(makeToken(@";"), 1),
            PegCode.new { s, . -> s })),
    PegChoice.new(
        PegMain.newSequence(
            parStatement,
            PegCode.new { s -> @{statements: [s]} }),
        PegMain.newSequence(
            parYieldOrNonlocal,
            PegCode.new { y -> @{statements: [], yield: y} }),
        PegResult.new(@{statements: []})),
    PegRepeat.new(makeToken(@";")),
    PegCode.new { ., most, last, . ->
        @{last*, statements: [most*, last::statements*]}
    });

## Documented in spec.
parRawClosure := PegMain.newSequence(
    makeToken(@"{"),
    parClosureDeclarations,
    parClosureBody,
    makeToken(@"}"),
    PegCode.new { ., decls, body, . -> @{decls*, body*} });

## Documented in spec.
def parProgram = PegMain.newSequence(
    PegChoice.new(
        PegSequence.new(
            PegRepeat.new(makeToken(@";")),
            parImportStatement,
            PegRepeat.new(
                PegSequence.new(
                    PegRepeat.new(makeToken(@";"), 1),
                    parImportStatement)),
            PegCode.new { ., first, rest -> [first, rest*] }),
        PegResult.new([])),
    PegChoice.new(
        PegSequence.new(
            PegChoice.new(
                PegSequence.new(
                    PegCode.new { imports -> ne(imports, []) },
                    PegRepeat.new(makeToken(@";"), 1)),
                PegRepeat.new(makeToken(@";"))),
            parProgramStatement,
            PegRepeat.new(
                PegSequence.new(
                    PegRepeat.new(makeToken(@";"), 1),
                    parProgramStatement)),
            PegCode.new { ., ., first, rest -> [first, rest*] }),
        PegResult.new([])),
    PegRepeat.new(makeToken(@";")),
    PegCode.new { imports, body, . ->
        def closure = makeFullClosure(@{
            statements: [imports*, body*],
            yield:      @void{}
        });
        withoutTops(closure)
    });

## Documented in spec.
def parExpressionOrError = PegMain.newSequence(
    parExpression,
    PegRepeat.new(
        PegMain.newSequence(
            PegRepeat.new(any, 1),
