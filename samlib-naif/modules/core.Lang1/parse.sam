        }));

## Documented in spec.
def parImportSelect = PegMain.newChoice(
    PegSequence.new(
        makeToken(@"::"),
        PegChoice.new(
            PegSequence.new(
                makeToken(@"*"),
                PegResult.new(@{select: @"*"})),
            PegSequence.new(
                parNameSymbolList,
                PegCode.new { ., select -> @{select} }))),
    PegResult.new(@{}));

## Documented in spec.
def parImportStatement = PegMain.newSequence(
    PegRepeat.new(makeToken(@export), 0, 1),
    makeToken(@import),
    parImportName,
    parImportFormat,
    parImportSource,
    parImportSelect,
    PegCode.new { optExport, ., nameOrPrefix, format, source, select ->
