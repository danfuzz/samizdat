##
## Samizdat Layer 1 Evaluation
##

#= language core.Lang0

def $Lang0 = moduleLoad(["core", "Lang0"]);

def convertToLang0 = intraLoad("convert")::convertToLang0;


##
## Exported Definitions
##

## Documented in spec.
export fn eval(env, expressionNode) {
    def convertedNode = convertToLang0(expressionNode);
    <> $Lang0::eval(env, convertedNode)
};
