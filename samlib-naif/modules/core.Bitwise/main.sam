##
## Bitwise functions
##

#= language core.Lang0

def $Bitwise = moduleLoad(["proto", "Bitwise"]);
def and     = $Bitwise::and;
def bit     = $Bitwise::bit;
def bitSize = $Bitwise::bitSize;
def not     = $Bitwise::not;
def or      = $Bitwise::or;
def shl     = $Bitwise::shl;
def xor     = $Bitwise::xor;

def $Number = moduleLoad(["proto", "Number"]);
def neg = $Number::neg;


##
## Exported Definitions
##

## Re-exported from proto.
export and;
export bit;
export bitSize;
export not;
export or;
export shl;
export xor;

## Documented in spec.
export fn shr(bitwise, n) {
    <> shl(bitwise, neg(n))
}
