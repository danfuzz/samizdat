##
## Bitwise functions
##

def $Bitwise = moduleLoad(["proto", "Bitwise"]);
def and     = $Bitwise::and;
def bit     = $Bitwise::bit;
def bitSize = $Bitwise::bitSize;
def not     = $Bitwise::not;
def or      = $Bitwise::or;
def shl     = $Bitwise::shl;
def xor     = $Bitwise::xor;

def $Number = moduleLoad(["proto", "Number"]);
def neg = $Number::neg;


##
## Exported Definitions
##

## Documented in spec.
fn shr(bitwise, n) {
    <> shl(bitwise, neg(n))
};


<> {
    ## Re-exported from proto.
    and,
    bit,
    bitSize,
    not,
    or,
    shl,
    xor,

    ## Defined here.
    shr
}
