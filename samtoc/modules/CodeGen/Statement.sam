##
## Statement tree.
##

import ./CodeString :: fix;
import ./Wrapper :: *;
import ./indentation :: *;


##
## Class Definition
##

## Secrets used to control access to this class.
def ACCESS = @ACCESS.toUnlisted();
def NEW = @NEW.toUnlisted();

export class Statement
        access: ACCESS,
        new: NEW {
    .flatten() {
        def data = this.(ACCESS)();
        return "\(data::tree.flatten());"
    };

    .indent(level, maxColumns) {
        def data = this.(ACCESS)();
        return "\(data::tree.indent(level, maxColumns));\n"
    };

    .prefersFlat() {
        def data = this.(ACCESS)();
        return? data::tree.prefersFlat()
            & this
    };
};


##
## Exported Definitions
##

export fn genStatement(tree) {
    return genWrapper(Statement.(NEW)(@{tree: fix(tree)}))
};
