##
## Statement tree.
##

def indentation = submoduleUse("indentation")::indentation;
def protocol = submoduleUse("protocol");

def flatten = protocol::flatten;
def indent = protocol::indent;

fn makeStatement(tree) {
    <> @Statement{tree, flat: "\(tree.flatten());"}
};

genericBind(
    flatten,
    "Statement",
    fn Statement_flatten(tree) {
        <> dataOf(tree)::flat
    });

genericBind(
    indent,
    "Statement",
    fn Statement_indent(tree, level, maxColumns) {
        def data = dataOf(tree);
        def prefix = indentation(level);

        <> if ((#data::flat + #prefix) <= maxColumns) {
            <> "\(prefix)\(data::flat)\n"
        } else {
            <> "\(data::tree.indent(level, maxColumns));\n"
        }
    });

<> {makeStatement}
