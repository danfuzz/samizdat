##
## Statement tree.
##

import ./Wrapper :: *;
import ./indentation :: *;
import ./protocol :: *;


##
## Exported Definitions
##

export fn genStatement(tree) {
    return genWrapper(@Statement{tree})
};

fn @@Statement.flatten() {
    return "\(this::tree.flatten());"
};

fn @@Statement.indent(level, maxColumns) {
    return "\(this::tree.indent(level, maxColumns));\n"
};

fn @@Statement.prefersFlat() {
    return? this::tree.prefersFlat()
        & this
};
