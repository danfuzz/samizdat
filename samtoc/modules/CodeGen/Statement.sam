##
## Statement tree.
##

import ./indentation :: *;
import ./protocol :: *;


##
## Exported Definitions
##

export fn genStatement(tree) {
    return @Statement{tree, flat: "\(tree.flatten());"}
};

fn @@Statement.flatten() {
    return this::flat
};

fn @@Statement.indent(level, maxColumns) {
    def prefix = indentation(level);

    return if ((#this::flat + #prefix) <= maxColumns) {
        "\(prefix)\(this::flat)\n"
    } else {
        "\(this::tree.indent(level, maxColumns));\n"
    }
};

fn @@Statement.prefersFlat() {
    return? prefersFlat(this::tree)
        & this
};
