##
## Statement tree.
##

def indentation = intraLoad("indentation")::indentation;
def protocol = intraLoad("protocol");

def flatten = protocol::flatten;
def indent = protocol::indent;

fn makeStatement(tree) {
    <> @Statement{tree, flat: "\(tree.flatten());"}
};

genericBind(
    flatten,
    @@Statement,
    fn Statement_flatten(tree) {
        <> tree::flat
    });

genericBind(
    indent,
    @@Statement,
    fn Statement_indent(tree, level, maxColumns) {
        def prefix = indentation(level);

        <> if ((#tree::flat + #prefix) <= maxColumns) {
            <> "\(prefix)\(tree::flat)\n"
        } else {
            <> "\(tree::tree.indent(level, maxColumns));\n"
        }
    });

<> {makeStatement}
