##
## Function call tree.
##

import ./Wrapper :: *;
import ./indentation :: *;
import ./protocol :: *;


##
## Exported Definitions
##

export fn genCall(function, args*) {
    var flatOk = false;
    if ((#args < 5) & function.prefersFlat()) {
        flatOk := true;
        for (a in args) {
            if (!a.prefersFlat()) {
                flatOk := false;
                break
            }
        }
    };

    return genWrapper(@Call{function, args, flatOk})
};

fn @@Call.flatten() {
    def args = this::args;

    return "\[
        this::function.flatten(),
        "(",
        ( a in args, i in (#args.. by -1) ->
            [a.flatten(), (i == 1) & "" | ", "]
        )*,
        ")"
    ]"
};

fn @@Call.indent(level, maxColumns) {
    def prefix = indentation(level);
    def args = this::args;
    def nextLevel = level + 1;

    return "\[
        prefix, this::function.flatten(), "(\n",
        ( a in args, i in (#args.. by -1) ->
            [
                a.indent(nextLevel, maxColumns),
                (i == 1) & ")" | ",\n"
            ]
        )*
    ]"
};

fn @@Call.prefersFlat() {
    return? this::flatOk** & this;
};
