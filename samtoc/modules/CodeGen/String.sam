##
## Protocol bindings for type String.
##

def indentation = intraLoad("indentation")::indentation;

def $protocol = intraLoad("protocol");
def flatten = $protocol::flatten;
def indent  = $protocol::indent;

genericBind(
    flatten,
    String,
    fn String_flatten(this) {
        <> this
    });

genericBind(
    indent,
    String,
    fn String_indent(this, level, maxColumns) {
        <> "\[indentation(level), this]"
    });
