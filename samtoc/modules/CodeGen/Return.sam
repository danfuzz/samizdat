##
## Return tree.
##

import ./indentation :: *;
import ./protocol :: *;


##
## Exported Definitions
##

export fn genReturn(tree) {
    return @Return{tree, flat: "return \(tree.flatten())"}
};

fn @@Return.flatten() {
    return this::flat
};

fn @@Return.indent(level, maxColumns) {
    def prefix = indentation(level);

    return if ((#this::flat + #prefix) <= maxColumns) {
        "\(prefix)\(this::flat)"
    } else {
        "\
        \(prefix)return
        \(this::tree.indent(level + 1, maxColumns))"
    }
};

fn @@Return.prefersFlat() {
    return? prefersFlat(this::tree)
        & this
};
