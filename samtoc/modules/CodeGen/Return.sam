##
## Return tree.
##

def indentation = intraLoad("indentation")::indentation;

def $protocol = intraLoad("protocol");
def flatten = $protocol::flatten;
def indent = $protocol::indent;

fn makeReturn(tree) {
    <> @Return{tree, flat: "return \(tree.flatten())"}
};

genericBind(
    flatten,
    @@Return,
    fn Return_flatten(this) {
        <> this::flat
    });

genericBind(
    indent,
    @@Return,
    fn Return_indent(this, level, maxColumns) {
        def prefix = indentation(level);

        <> if ((#this::flat + #prefix) <= maxColumns) {
            <> "\(prefix)\(this::flat)"
        } else {
            <> "\
            \(prefix)return
            \(this::tree.indent(level + 1, maxColumns))"
        }
    });

<> {makeReturn}
