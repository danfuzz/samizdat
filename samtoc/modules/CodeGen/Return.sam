##
## Return tree.
##

import ./Wrapper :: *;
import ./indentation :: *;
import ./protocol :: *;


##
## Exported Definitions
##

export fn genReturn(tree) {
    return genWrapper(@Return{tree})
};

fn @@Return.flatten() {
    return "return \(this::tree.flatten())"
};

fn @@Return.indent(level, maxColumns) {
    def prefix = indentation(level);

    return "\
        \(prefix)return
        \(this::tree.indent(level + 1, maxColumns))"
};

fn @@Return.prefersFlat() {
    return? this::tree.prefersFlat()
        & this
};
