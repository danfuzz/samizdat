##
## Variable assignment tree.
##

def indentation = intraLoad("indentation")::indentation;

def $protocol = intraLoad("protocol");
def flatten = $protocol::flatten;
def indent = $protocol::indent;

fn makeAssign(target, value) {
    def flat = "\(target.flatten()) = \(value.flatten())";

    <> @Assign{target, value, flat}
};

genericBind(
    flatten,
    @@Assign,
    fn Assign_flatten(this) {
        <> this::flat
    });

genericBind(
    indent,
    @@Assign,
    fn Assign_indent(this, level, maxColumns) {
        def prefix = indentation(level);

        if ((#this::flat + #prefix) <= maxColumns) {
            return "\[prefix, this::flat]"
        };

        <> "\[
            this::target.indent(level, maxColumns),
            " =\n",
            this::value.indent(level + 1, maxColumns)
        ]"
    });

<> {makeAssign}
