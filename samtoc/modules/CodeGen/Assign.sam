##
## Variable assignment tree.
##

import ./Wrapper :: *;
import ./indentation :: *;
import ./protocol :: *;


##
## Exported Definitions
##

export fn genAssign(target, value) {
    return genWrapper(@Assign{target, value})
};

fn @@Assign.flatten() {
    return "\(this::target.flatten()) = \(this::value.flatten())"
};

fn @@Assign.indent(level, maxColumns) {
    return cat(
        this::target.indent(level, maxColumns),
        " =\n",
        this::value.indent(level + 1, maxColumns)
    )
};

fn @@Assign.prefersFlat() {
    return? this::target.prefersFlat()
        & this::value.prefersFlat()
        & this
};
