##
## Comment tree.
##

import ./CodeString :: fix;
import ./Wrapper :: *;
import ./indentation :: *;


##
## Class Definition
##

## Secret used to control access to this class.
def SECRET = @secret.toUnlisted();

class Comment
        access: SECRET {
    fn flatten() {
        def data = SECRET(this);
        def text = data::text;

        return (def payload = data::payload)
            & "/* \(text) */ \(payload.flatten())"
            | "/* \(text) */"
    };

    fn indent(level, maxColumns) {
        def data = SECRET(this);
        def prefix = indentation(level);

        return if (def p = data::payload) {
            "".cat(
                prefix, "// ", data::text, "\n",
                p.indent(level, maxColumns)
            )
        } else {
            "\(prefix)/* \(data::text) */"
        }
    };

    fn prefersFlat() {
        def data = SECRET(this);
        return? (#data::text < 30)
            & (((def payload = data::payload)
                & payload.prefersFlat()?
                | true?)*)
            & this
    };
};

##
## Exported Definitions
##

export fn genComment(text, optPayload?) {
    return if (def payload = optPayload*) {
        genWrapper(SECRET(Comment, @{payload: fix(payload), text}))
    } else {
        genWrapper(SECRET(Comment, @{text}))
    }
};
