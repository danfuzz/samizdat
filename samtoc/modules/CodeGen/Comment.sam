##
## Comment tree.
##

def indentation = intraLoad("indentation")::indentation;

def $protocol = intraLoad("protocol");
def flatten = $protocol::flatten;
def indent = $protocol::indent;

fn makeComment(text, optPayload?) {
    <> if (def payload = optPayload*) {
        def flat = "/* \(text) */ \(payload.flatten())";
        <> @Comment{payload, text, flat}
    } else {
        def flat = "/* \(text) */";
        <> @Comment{text, flat}
    }
};

genericBind(
    flatten,
    @@Comment,
    fn Comment_flatten(tree) {
        <> tree::flat
    });

genericBind(
    indent,
    @@Comment,
    fn Comment_indent(tree, level, maxColumns) {
        def prefix = indentation(level);

        if ((#tree::flat + #prefix) <= maxColumns) {
            return "\[prefix, tree::flat]"
        };

        <> if (def p = tree::payload) {
            <> "\[
                prefix, "// ", tree::text, "\n",
                p.indent(level, maxColumns)
            ]"
        } else {
            <> "\(prefix)/* \(tree::text) */"
        }
    });

<> {makeComment}
