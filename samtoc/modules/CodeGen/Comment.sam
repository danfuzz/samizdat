##
## Comment tree.
##

import ./indentation :: *;
import ./protocol :: *;


##
## Exported Definitions
##

export fn genComment(text, optPayload?) {
    return if (def payload = optPayload*) {
        def flat = "/* \(text) */ \(payload.flatten())";
        @Comment{payload, text, flat}
    } else {
        def flat = "/* \(text) */";
        @Comment{text, flat}
    }
};

fn @@Comment.flatten() {
    return this::flat
};

fn @@Comment.indent(level, maxColumns) {
    def prefix = indentation(level);

    if ((#this::flat + #prefix) <= maxColumns) {
        return "\[prefix, this::flat]"
    };

    return if (def p = this::payload) {
        "\[
            prefix, "// ", this::text, "\n",
            p.indent(level, maxColumns)
        ]"
    } else {
        "\(prefix)/* \(this::text) */"
    }
};

fn @@Comment.prefersFlat() {
    return? (#this::text < 30)
        & ((def payload = this::payload)
            & payload.prefersFlat()
            | true)
        & this
};
