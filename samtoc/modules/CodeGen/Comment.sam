##
## Comment tree.
##

import ./Wrapper :: *;
import ./indentation :: *;
import ./protocol :: *;


##
## Exported Definitions
##

export fn genComment(text, optPayload?) {
    return if (def payload = optPayload*) {
        genWrapper(@Comment{payload, text})
    } else {
        genWrapper(@Comment{text})
    }
};

fn @@Comment.flatten() {
    def text = this::text;

    return (def payload = this::payload)
        & "/* \(text) */ \(payload.flatten())"
        | "/* \(text) */"
};

fn @@Comment.indent(level, maxColumns) {
    def prefix = indentation(level);

    return if (def p = this::payload) {
        cat(
            prefix, "// ", this::text, "\n",
            p.indent(level, maxColumns)
        )
    } else {
        "\(prefix)/* \(this::text) */"
    }
};

fn @@Comment.prefersFlat() {
    return? (#this::text < 30)
        & (((def payload = this::payload)
            & payload.prefersFlat()?
            | true?)*)
        & this
};
