##
## Comment tree.
##

import ./indentation :: indentation;
import ./protocol :: flatten, indent;

export fn genComment(text, optPayload?) {
    <> if (def payload = optPayload*) {
        def flat = "/* \(text) */ \(payload.flatten())";
        <> @Comment{payload, text, flat}
    } else {
        def flat = "/* \(text) */";
        <> @Comment{text, flat}
    }
};

fn @@Comment.flatten() {
    <> this::flat
};

fn @@Comment.indent(level, maxColumns) {
    def prefix = indentation(level);

    if ((#this::flat + #prefix) <= maxColumns) {
        return "\[prefix, this::flat]"
    };

    <> if (def p = this::payload) {
        <> "\[
            prefix, "// ", this::text, "\n",
            p.indent(level, maxColumns)
        ]"
    } else {
        <> "\(prefix)/* \(this::text) */"
    }
};
