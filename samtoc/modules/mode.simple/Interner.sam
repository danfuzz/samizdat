##
## Exported Definitions
##

export fn makeInterner() {
    var values = {};
    return @Interner{values: values?}
};

export fn intern(this, value) {
    def box = this::values;
    def values = box*;

    if (def already = values[value]) {
        return already;
    };

    def result = #values;

    box* := {values*, (value): result};
    return result
};

export fn get_interns(this) {
    def map = this::values*;
    def boxList = [ n in (0..#map) -> def result; result? ];

    for (mapping in map) {
        def id = mapping.value;
        boxList[id]* := mapping.key
    };

    return [ box in boxList -> box* ]
};
