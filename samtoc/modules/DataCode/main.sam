##
## Convert data into C code that constructs that data.
##

def convert = submoduleUse("convert");
def indent = submoduleUse("indent")::indent;

## Converts a tree to a string, without any indentation.
fn convertNoIndent(tree) {
    <> convertIndent(tree, 0, 100_000_000)
};

## Converts a tree to a string, with indentation.
fn convertIndent(tree, level, maxColumns) {
    <> indent(convert::convert(tree), level, maxColumns)
};

<> {
    convert*,
    indent,
    convertIndent,
    convertNoIndent
}
