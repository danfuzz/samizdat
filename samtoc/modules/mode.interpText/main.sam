##
## Compilation mode "interp-text" which just takes the source text and
## embeds it into C code which calls the parser. When run, this uses the
## underlying interpreter (hence the name's prefix).
##

def Template = moduleLoad(["Template"]);
def templateText = intraReadUtf8("template.txt");

def Io0 = moduleLoad(["core", "Io0"]);

fn compile(sourcePath, targetPath) {
    def replacements = {
        source: Io0::readFileUtf8(sourcePath)
    };

    def outputText = Template::apply(templateText, replacements);
    Io0::writeFileUtf8(targetPath, outputText)
};

<> {compile}
