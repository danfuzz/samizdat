#
# `ValueGenerator` Type
#

def Generator = moduleUse({name: ["proto", "Generator"]});
def Io0 = moduleUse({name: ["core", "Io0"]});

#
# Exported Definitions
#

# Documented in spec.
fn ValueGenerator_collect(gen) {
    Io0::die("Unbounded generator.");
};
genericBind(Generator::collect, "ValueGenerator", ValueGenerator_collect);

# Documented in spec.
fn ValueGenerator_nextValue(gen, box) {
    Box::store(box, dataOf(gen));
    <> gen
};
genericBind(Generator::nextValue, "ValueGenerator", ValueGenerator_nextValue);

# Documented in spec.
fn makeValueGenerator(value) {
    <> @ValueGenerator(value)
};

<> {
    makeValueGenerator: makeValueGenerator
}
