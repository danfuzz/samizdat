#
# `ParaGenerator` Type
#
# Payload is `[subGens*]`, a list of sub-generators.

def Box = moduleUse({name: ["core", "Box"]});
def Generator = moduleUse({name: ["proto", "Generator"]});

def ListWrapGenerator = submoduleUse("ListWrapGenerator");
def NullGenerator = submoduleUse("NullGenerator");


#
# Exported Definitions
#

# Documented in spec.
fn makeParaGenerator(generators*) {
    # Return the `nullGenerator` if we weren't passed any arguments.
    ifIs { <> eq(generators, []) }
        { return NullGenerator::nullGenerator };

    # Return a `ListWrapGenerator` if we were only passed one argument.
    # This saves some overhead.
    ifIs { <> eq(Collection::sizeOf(generators), 1) }
        { return ListWrapGenerator::makeListWrapGenerator(generators*) };

    <> @[ParaGenerator: generators]
};

# Documented in spec.
fn ParaGenerator_nextValue(gen, box) {
    def subGens = dataOf(gen);

    ifIs { <> eq(subGens, []) }
        { return Generator::nextValue(Box::nullBox, box) };

    def generatorCalls = Generator::filter(
        subGens,
        { gen ->
            def innerBox = Box::makeYieldBox();
            <> ifValue { <> Generator::nextValue(gen, innerBox) }
                { nextGenerator <> [Box::fetch(innerBox), nextGenerator] }
                {
                    # One of the sub-generators became voided.
                    Box::store(box);
                    return
                }
        });

    def yields = Generator::filter(generatorCalls,
        { one <> Collection::nth(one, 0) });
    def nexts = Generator::filter(generatorCalls,
        { one <> Collection::nth(one, 1) });

    Box::store(box, yields);
    <> @[ParaGenerator: nexts]
};
genericBind(Generator::nextValue, "ParaGenerator", ParaGenerator_nextValue);

<> {
    makeParaGenerator: makeParaGenerator
}
