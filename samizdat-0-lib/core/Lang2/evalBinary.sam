#
# Samizdat Layer 2 Binary Library Support
#

def Io1 = moduleUse({name: ["core", "Io1"]});
def Lang1 = moduleUse({name: ["core", "Lang1"]});


#
# Exported Definitions
#

# Documented in Samizdat Layer 1 spec.
fn evalBinary(context, filePath) {
    def flatPath = Io1::flatFromPath(filePath);
    <> Lang1::evalBinary(context, flatPath)
};

<> {
    evalBinary
}
