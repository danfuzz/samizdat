#
# Ints
#

# Documented in Samizdat Layer 0 spec.
fn intSign(int) {
    # The `iadd` call ensures that the value is an int.
    <> ifTrue { <> eq(iadd(int, 0), 0) }
        { <> 0 }
        { <> ifTrue { <> gt(int, 0) } { <> 1 } { <> -1 } }
};

<> [
    intSign: intSign
]
