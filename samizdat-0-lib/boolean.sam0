#
# Booleans
#


#
# Helper definitions
#

# Map of boolean-notness.
def NOT_MAP = [
    (true):  false,
    (false): true
];


#
# Exported functions
#

# Documented in Samizdat Layer 0 spec.
fn booleanFromLogic(logic?) {
    <> ifIs { <> eq(logic, []) }
        { <> false }
        { <> true }
};

# Documented in Samizdat Layer 0 spec.
fn logicFromBoolean(value) {
    <> ifIs { <> eq(value, true) }
        { <> true }
        {
            <> ifIs { <> eq(value, false) }
                { <> }
                { io0Die("Non-boolean argument to `logicFromBoolean`.") }
        }
};

# Documented in Samizdat Layer 0 spec.
fn booleanNot(value) {
    <> ifValueOr { <> mapGet(NOT_MAP, value) }
        { io0Die("Non-boolean argument to `booleanNot`.") }
};

<> [
    booleanFromLogic: booleanFromLogic,
    booleanNot:       booleanNot,
    logicFromBoolean: logicFromBoolean
]
