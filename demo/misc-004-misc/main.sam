export fn main(selfPath, name?, rest*) {
    ## Be welcoming.
    note("Hello, Самиздат!\n");

    process(selfPath);
    process(rest);
    process(ifIs);
    process(ne);
    process(String);
    process($Format::int(71, 2));
    process($Format::int(71, 10));
    process($Format::int(71, 16));
    process($Format::int(71, 36));
}
