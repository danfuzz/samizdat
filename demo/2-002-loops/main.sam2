#
# Loop expression demo
#


# This declares the arguments to the program itself.
SELF_PATH, ARGS* ::


#
# Main Tests
#

def box = makeMutableBox(0);

while (fetch(box) \< 10) {
    store(box, fetch(box) + 1);
    io0Note("Value is \%q(fetch(box)).")
};

while (fetch(box) \< 20) {
    store(box, fetch(box) + 1);
    if (fetch(box) \< 15) {
        continue
    };
    io0Note("Value is \%q(fetch(box)).")
};

while (fetch(box) \< 30) { <next> ::
    store(box, fetch(box) + 1);
    if (fetch(box) \< 25) {
        <next>
    };
    io0Note("Value is \%q(fetch(box)).")
};

def result1 = while (fetch(box) \< 40) {
    store(box, fetch(box) + 1);
    if (fetch(box) \== 35) {
        break "blort"
    };
    io0Note("Value is \%q(fetch(box)).")
};

io0Note("Result 1 is \%q(result1).");

def result2 = while <out> (fetch(box) \< 50) {
    store(box, fetch(box) + 1);
    if (fetch(box) \== 45) {
        <out> "fizmo"
    };
    io0Note("Value is \%q(fetch(box)).")
};

io0Note("Result 2 is \%q(result2).");

do {
    store(box, fetch(box) + 1);
    if (fetch(box) \== 55) {
        break
    };
    io0Note("Value is \%q(fetch(box)).")
};

def result3 = do <out> {
    store(box, fetch(box) + 1);
    if (fetch(box) \== 60) {
        <out> "igram"
    };
    io0Note("Value is \%q(fetch(box)).")
};

io0Note("Result 3 is \%q(result3).");

do {
    store(box, fetch(box) + 1);
    if (fetch(box) \< 65) {
        continue
    };
    io0Note("Value is \%q(fetch(box)).")
} while (fetch(box) \< 70);

while (value := (75 \> fetch(box))) {
    def nextVal = value + 1;
    store(box, nextVal);
    io0Note("Value is \%q(nextVal).")
};

<> 0
