##
## `if*` function demo
##

#= language core.Lang0


##
## Main demos
##

def maybe1 = maybeValue { -> };
note($Format::source(maybe1));

def maybe2 = maybeValue { "Yes: opt" };
note($Format::source(maybe2));

def v1 = ifValue { "Yes." }
    { value ->
        note(value);
        "Yes: v1"
    };
note(v1);

def v2 = ifValue { "Yes." }
    { value ->
        note(value);
        "Yes: v2"
    }
    { die("No.") };
note(v2);

def v3 = ifValue { -> }
    { value -> die("No.") }
    {
        note("Yes.");
        "Yes: v3"
    };
note(v3);

def v4 = maybeValue { ifValue { -> } { value -> die("No."); } };
note($Format::source(v4));

def v5 = ifIs { "Yes." }
    { "Yes: v5" };
note(v5);

def v6 = ifIs { "Yes." }
    { "Yes: v6" }
    { die("No.") };
note(v6);

def v7 = ifIs { }
    { die("No.") }
    { "Yes: v7" };
note(v7);

def v8 = maybeValue { ifIs { } { die("No.") } };
note($Format::source(v8));

def v9 = maybeValue { ifNot { "Yes." } { die("No.") } };
note($Format::source(v9));

def v10 = ifNot { -> }
    { "Yes: v10" };
note(v10);

def v11 = maybeValue { ifValueOr() };
note($Format::source(v11));  ## Should be `[]`.

def v12 = ifValueOr { "Yes: v12" };
note(v12);

def v13 = ifValueOr
    { "Yes: v13" }
    { die("No.") };
note(v13);

def v14 = ifValueOr
    { -> }
    { "Yes: v14" };
note(v14);

def v15 = ifValueAnd { "Yes: v15" };
note(v15);

def v16 = ifValueAnd
    { "Yes: v16" }
    { args* -> $Format::source(args) };
note(v16);

def v17 = maybeValue { ifValueAnd { -> } };
note($Format::source(v17));  ## Should be `[]`.

def v18 = ifValueAnd
    { "v" }
    { x -> x.cat("18") };
note(v18);

def v19 = maybeValue { ifValueAnd { "1" } { x -> } };
note($Format::source(v19));  ## Should be `[]`.

def v20 = ifValueAnd
    { "1" }
    { x -> x.cat("2") }
    { x, y -> x.cat(y, "3") }
    { x, y, z -> x.cat(y, z, "4") }
    { args* -> $Format::source(args) };
note(v20);

def v21 = ifValueAndElse
    { "v21" }
    { die("No.") };
note(v21);

def v22 = ifValueAndElse
    { -> "v" }
    { x -> x.cat("22") }
    { die("No.") };
note(v22);

def v23 = ifValueAndElse
    { -> }
    { die("No.") }
    { "Yes: v23" };
note(v23);

def v24 = ifSwitch(
    { -> "v24" },
    {
        x: { . -> die("No.") }
    },
    { v -> "Yes: ".cat(v) });
note(v24);

def v25 = ifSwitch(
    { -> @y },
    {
        x: { . -> die("No.") },
        y: { . -> }
    },
    { . -> die("No.") })?;
note($Format::source(v25));  ## Should be `[]`.

def v26 = ifSwitch(
    { -> @Yes },
    {
        x: { . -> die("No.") },
        Yes: { v -> "".cat(v, ": v24") }
    },
    { . -> die("No.") });
note(v26);
