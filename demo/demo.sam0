# This declares the arguments to the program itself.
ARGS* ::


#
# Main function
#

process = { value ::
    io0WriteFileUtf8 @"/dev/stdout" (sourceStringlet value);
    io0WriteFileUtf8 @"/dev/stdout" @"\n";
};

main = { name rest* ::
    # Be welcoming.

    if { <> eq name @danfuzz } {
        io0WriteFileUtf8 @"/dev/stdout" @"Hello, Danfuzz!\n\n"
    } else {
        io0WriteFileUtf8 @"/dev/stdout" @"Hello, Самиздат!\n\n"
    };

    process rest;
    process @0;
    process @98765;
    process @-12345;
    process @[];
    process @[@-1];
    process @[@1 @-2];
    process @[@-1 @2 @300];
    process @"";
    process @"\"Blort.\" \n";
    process @[=];
    process @[@1=@2];
    process @[@1=@2 @888=@1];
    process @[@fizmo=@omzif @igram=@margi @blort=@trolb];
    process null;
    process false;
    process true;
    process @@;
};

<> apply main ARGS
