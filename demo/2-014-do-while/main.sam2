##
## Main Tests
##

def box = Box::makeCell(0);

do { <next> ->
    store(box, fetch(box) + 1);
    if (fetch(box) == 5) {
        continue
    } else if (fetch(box) == 7) {
        <next>
    };
    note("Value is \%q(fetch(box)).")
} while (fetch(box) < 10);

def result1 = do {
    store(box, fetch(box) + 1);
    if (fetch(box) == 13) {
        break "blort"
    };
    note("Value is \%q(fetch(box)).")
} while (fetch(box) < 15);

note("Result is \%q(result1).");

def result2 = do <out> {
    store(box, fetch(box) + 1);
    if (fetch(box) == 18) {
        <out> "frotz"
    };
    note("Value is \%q(fetch(box)).")
} while (fetch(box) < 20);

note("Result is \%q(result2).");

<> 0
