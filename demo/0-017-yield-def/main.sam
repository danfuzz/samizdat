##
## Yield def demo
##

#= language core.Lang0


##
## Main Tests
##

def x = { <outx> ->
    <outx> "Hello"
}();

note(x);

def y = { <outx> arg ->
    <outx> arg
}("and");

note(y);

def z = { <stuff> ->
    ifValue { <> "also" }
        { value -> <stuff> value }
}();

note(z);

fn foo() { <blort> ->
    <blort> "goodbye"
};

note(foo());

fn bar(arg) { <blort> ->
    <blort> arg
};

note(bar("to"));

fn baz(foo) { <out> ->
    ifIs { <> eq(foo, 1) }
        { <out> "you" }
        { <out> }
};

note(baz(1));
ifNot { <> baz(2) }
    { note("too!"); };
