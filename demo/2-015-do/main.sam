## Loop expression demo
##


##
## Main Tests
##

def box = $Box::makeCell(0);

do {
    store(box, fetch(box) + 1);
    if (fetch(box) == 5) {
        break
    };
    note("Value is \%q(fetch(box)).")
};

do { /next ->
    store(box, fetch(box) + 1);
    if (fetch(box) == 10) {
        continue
    } else if (fetch(box) == 12) {
        yield /next
    } else if (fetch(box) == 15) {
        break
    };
    note("Value is \%q(fetch(box)).")
};

def result = do /out {
    store(box, fetch(box) + 1);
    if (fetch(box) == 20) {
        yield /out "igram"
    };
    note("Value is \%q(fetch(box)).")
};

note("Result is \%q(result).");
