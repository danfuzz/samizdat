##
## Loop expression demo
##

def Io1 = moduleLoad(["core", "Io1"]);


##
## Main Tests
##

def box = Box::makeCell(0);

do {
    Box::store(box, Box::fetch(box) + 1);
    if (Box::fetch(box) == 5) {
        break
    };
    Io1::note("Value is \%q(Box::fetch(box)).")
};

do { <next> ->
    Box::store(box, Box::fetch(box) + 1);
    if (Box::fetch(box) == 10) {
        continue
    } else if (Box::fetch(box) == 12) {
        <next>
    } else if (Box::fetch(box) == 15) {
        break
    };
    Io1::note("Value is \%q(Box::fetch(box)).")
};

def result = do <out> {
    Box::store(box, Box::fetch(box) + 1);
    if (Box::fetch(box) == 20) {
        <out> "igram"
    };
    Io1::note("Value is \%q(Box::fetch(box)).")
};

Io1::note("Result is \%q(result).");

<> 0
