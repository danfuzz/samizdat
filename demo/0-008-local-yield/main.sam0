## Demo of local yield
##


##
## Helper Definitions
##

fn bad() {
    die("Wrong!")
};

fn good() {
    note("Ok")
};

fn yieldVoid1() {
    <>
};

fn yieldVoid2() {
    ## This space intentionally left blank
};

fn yieldVoid3() {
    <> yieldVoid1()
};

fn yieldVoid4() {
    "not-actually-yielded"
};

fn yieldArg(a) {
    <> a
};


##
## Main Tests
##

ifIs(yieldVoid1, bad, good);
ifIs(yieldVoid2, bad, good);
ifIs(yieldVoid3, bad, good);
ifIs(yieldVoid4, bad, good);

ifValue { <> yieldArg("woo") }
    { v <> note(v) }
    { bad() };

<> 0
