#!/bin/bash
#
# Copyright 2013 the Samizdat Authors (Dan Bornstein et alia).
# Licensed AS IS and WITHOUT WARRANTY under the Apache License,
# Version 2.0. Details: <http://www.apache.org/licenses/LICENSE-2.0>


#
# Directory and program name detection
#

# Preserve the original working dir as origDir.
origDir="${PWD}"

# Set progName to the program name, progDir to its directory, and baseDir
# to progDir's directory. Follows symlinks.
prog="$0"
while [[ -h ${prog} ]]; do
    [[ "$(/bin/ls -ld "${prog}")" =~ .*' -> '(.*)$ ]]
    newProg="${BASH_REMATCH[1]}"
    if [[ ${newProg} =~ ^/ ]]; then
        prog="${newProg}"
    else
        prog="$(dirname "${prog}")/${newProg}"
    fi
done
progName="$(basename "${prog}")"
progDir="$(dirname "${prog}")"
cd "${progDir}"
progDir="${PWD}"
cd ..
baseDir="${PWD}"
cd "${origDir}"
unset prog
unset newProg



#
# Argument parsing
#

# Which Samizdat layer to use.
layer='0'

# Whether to super-validate. (Slow but useful.)
validate='no'

# Whether to compile with optimization.
optimize='no'

# Whether to run with iprofiler (OS X specific profile tool)
iprofiler='no'

while [[ $1 != '' ]]; do
    opt="$1"
    if [[ ${opt} == '--' ]]; then
        shift
        break
    elif [[ ${opt} == '--help' ]]; then
        echo "${progName} [--sam0 | --sam1] [--iprofile] [--optimize]"
        echo "    [--validate]"
        exit
    elif [[ ${opt} == '--sam0' ]]; then
        layer='0'
    elif [[ ${opt} == '--sam1' ]]; then
        layer='1'
    elif [[ ${opt} == '--iprofiler' ]]; then
        iprofiler='yes'
    elif [[ ${opt} == '--optimize' ]]; then
        optimize='yes'
    elif [[ ${opt} == '--validate' ]]; then
        validate='yes'
    elif [[ ${opt} =~ ^- ]]; then
        echo "Unknown option: ${opt}" 1>&2
        exit 1
    else
        break
    fi
    shift
done
unset opt


#
# Main script
#

opts=()
buildOpts=()

if [[ ${optimize} == 'yes' ]]; then
    buildOpts=(--optimize)
fi

if [[ ${layer} == '0' ]]; then
    "${baseDir}/samizdat-0/build" "${buildOpts[@]}" > /dev/null
    PATH="${PATH}:${baseDir}/out/samizdat-0"
    cmd=("samizdat-0")
elif [[ ${layer} == '1' ]]; then
    "${baseDir}/samizdat-1/build" "${buildOpts[@]}" > /dev/null
    PATH="${PATH}:${baseDir}/out/samizdat-0:${baseDir}/out/samizdat-1"
    cmd=("samizdat-1")
else
    echo 'Unknown layer.' 1>&2
    exit 1
fi

if [[ ${iprofiler} == 'yes' ]]; then
    cmd=("$(which samizdat-0)")
    if [[ ${layer} == '1' ]]; then
        cmd=("${cmd[@]}" "${baseDir}/out/samizdat-1/main.sam0")
    fi
    # May also want to use the -allocations option.
    cmd=(iprofiler -T 20s -timeprofiler "${cmd[@]}")
fi

if [[ ${validate} == 'yes' ]]; then
    opts=(--validate)
fi

"${cmd[@]}" "${opts[@]}" "${progDir}/main.sam0" "$@"
