##
## If clause demo
##


##
## Helper Definitions
##

fn returnBlort() {
    <> "blort"
};

fn returnFrotz() {
    <> "frotz"
};

fn returnIgram() {
    <> "igram"
};

fn returnVoid() {
    ## I can see through time.
};


##
## Main Tests
##

if (1 \== 1) {
    note("1 is 1")
};

if (1 \== 2) {
    note("1 is 2?!")
};

if (1 \== 1) {
    note("1 is 1")
} else {
    note("1 is not 1?!")
};

if (1 \== 2) {
    note("1 is 2?!")
} else {
    note("1 is not 2")
};

if (1 \== 1) {
    note("1 is 1")
} else if (1 \== 2) {
    note("1 is 2?!")
};

if (1 \== 2) {
    note("1 is 2?!")
} else if (1 \== 3) {
    note("1 is 3?!")
};

if (1 \== 1) {
    note("1 is 1")
} else if (1 \== 2) {
    note("1 is 2?!")
} else {
    note("1 is not 1?!")
};

if (1 \== 2) {
    note("1 is 2?!")
} else if (1 \== 1) {
    note("1 is 1")
} else {
    note("1 is not 1?!")
};

if (1 \== 2) {
    note("1 is 2?!")
} else if (1 \== 3) {
    note("1 is 3?!")
} else {
    note("1 is not 2 or 3")
};

def blort1 = if (1 \== 1) {
    <> "1 is 1"
} else {
    <> "1 is not 1?!"
};

note(blort1);

def blort2 = if <out> (1 \== 2) {
    <out> "1 is 2?!"
} else {
    <out> "1 is not 2"
};

note(blort2);

if (def x = returnBlort()) {
    note(x)
};

if (def x = returnBlort()) {
    note(x)
} else {
    note("Um?!")
};

if (def x = returnVoid()) {
    note("Um?!")
} else {
    note("The expected void.")
};

if (def x = returnVoid()) {
    note("Um?!")
} else if (def y = returnFrotz()) {
    note(y)
} else if (def x = returnIgram()) {
    note(x)
};

if (def x = returnVoid()) {
    note("Um?!")
} else if (def y = returnBlort()) {
    note(y)
} else if (def y = returnFrotz()) {
    note(y)
} else if (def x = returnIgram()) {
    note(x)
};

if (def x = returnVoid()) {
    note("Um?!")
} else if (def y = returnVoid()) {
    note("Um?!")
} else if (def x = returnIgram()) {
    note(x)
} else {
    note("Um?!")
};

if (def x = "fr", def y = "otz") {
    note(cat(x, y))
} else {
    note("Um?")
};

if (def x = "x", def y = returnVoid()) {
    note("Um?!")
} else {
    note("Yes.")
};

if (def x = returnVoid(), def y = "y") {
    note("Um?!")
} else {
    note("Yes.")
};

if (def x = "fr", "stuff", def y = "ot", def z = "z") {
    note(cat(x, y, z))
};

if (def x = returnVoid()) {
    note("Um?!")
} else if (def x = "fi", "stuff", def y = "zm", def z = "o") {
    note(cat(x, y, z))
};

<> 0
