#= language core.Lang0

import core.FilePath;
import core.Io0;


##
## Private Definitions
##

## Checking file type / existence.
fn tryFile(path) {
    def result = ifValueOr { $Io0::fileType(path) } { "(void)" };
    note("fileType(", $Format::source(path), ") => ", result)
};


##
## Main Tests
##

export fn main(selfPath, .*) {
    def selfDir = $FilePath::get_directory(selfPath);

    def text = $Io0::readFileUtf8(cat(selfDir, "/sibling.txt"));
    note(text);

    tryFile(cat(selfDir, "/sibling.txt"));
    tryFile(cat(selfDir, "/non-sibling.txt"));
    tryFile(cat(selfDir, "/nonexistent-directory/zorch.txt"));
    tryFile(selfDir);

    note();
    note($Format::source($Io0::readDirectory(selfDir)));
};
