##
## Class definition syntax demo
##

#= language core.Lang0


##
## Private Definitions
##

fn print(args*) {
    note($Format::sourceUnadorned(args))
};


##
## Main Tests
##

def ACCESS = @ACCESS.toUnlisted();
def NEW = @NEW.toUnlisted();

## Simplest possible class.

note("Blort (the first)");

class Blort {
    ## This space intentionally left blank.
};

print(Blort);
print(Blort.get_parent());

## Another class with the same name.

note("\nBlort (the second)");

def OtherBlort = {
    class Blort { };
    Blort
}();

print(OtherBlort);
print(OtherBlort.get_parent());
ifIs { eq(Blort, OtherBlort) }
    { die("Should be different classes!") };


## Class with secret and no methods.

note("\nFizmo");

class Fizmo
        access: ACCESS,
        new: NEW {
    ## This space intentionally left blank.
};

print(Fizmo);
def fizmo = NEW(Fizmo);
print(fizmo);
print(ACCESS(fizmo));

## Class with secret and just one method.

note("\nIgram");

class Igram
        access: ACCESS,
        new: NEW {
    fn hello() {
        note("Igram! ", ACCESS(this)::effect)
    }
};

print(Igram);
def igram = NEW(Igram, @{effect: "purple -> invisible"});
print(igram);
print(ACCESS(igram));
igram.hello();
