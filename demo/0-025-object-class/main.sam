## Class definition demo
##

#= language core.Lang0

def whatIs = @.whatIs;
def SECRET = "not-very-secret";

def Foo = makeObjectClass("Foo", SECRET);
fn Foo.whatIs() {
    note("I am a Foo.");
};

def Bar = makeObjectClass("Bar", SECRET);
fn Bar.whatIs() {
    note("I am a Bar: ", objectDataOf(this, SECRET)::stuff);
};

whatIs(makeObject(Foo, SECRET));
whatIs(makeObject(Bar, SECRET, {stuff: "stuff!"}));
