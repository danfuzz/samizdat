#
# General setup
#

# Set `progName` to the program name, `progDir` to its directory, and `baseDir`
# to `progDir`'s directory. Follows symlinks.
function init-prog {
    local newp prog="$0"

    while newp="$(readlink "${prog}")"; do
        [[ ${newp} =~ ^/ ]] && prog="${newp}" || prog="${prog%/*}/${newp}"
    done

    progName="${prog##*/}"
    progDir="$(cd "${prog%/*}"; /bin/pwd -P)"
    baseDir="$(cd "${progDir}/.."; /bin/pwd -P)"
}

init-prog


#
# Argument parsing
#

# Preferred runtime name option.
runtimeName=''

# Whether to build a binary.
build='no'

# Whether to build with optimization.
optimize='no'

# Whether to time the run.
timeRun='no'

# Whether to profile the run.
profileRun='no'

# File suffix to use.
suffix=''

while [[ $1 != '' ]]; do
    opt="$1"
    if [[ ${opt} == '--' ]]; then
        shift
        break
    elif [[ ${opt} == '--help' ]]; then
        echo "${progName} [--runtime=<name>] [--suffix=<suffix>]"
        echo '    [--build] [--optimize] [--time | --profile]'
        exit
    elif [[ ${opt} == '--build' ]]; then
        build='yes'
    elif [[ ${opt} == '--optimize' ]]; then
        optimize='yes'
        build='yes'
    elif [[ ${opt} == '--profile' ]]; then
        profileRun='yes'
        timeRun='no'
    elif [[ ${opt} =~ ^--runtime=(.*) ]]; then
        runtimeName="${BASH_REMATCH[1]}"
    elif [[ ${opt} =~ ^--suffix=(.*) ]]; then
        suffix="${BASH_REMATCH[1]}"
    elif [[ ${opt} == '--time' ]]; then
        timeRun='yes'
        profileRun='no'
    elif [[ ${opt} =~ ^- ]]; then
        echo "Unknown option: ${opt}" 1>&2
        exit 1
    else
        break
    fi
    shift
done
unset opt


#
# Main script
#

# Build the binary, if requested.

if [[ ${build} == 'yes' ]]; then
    if [[ ${runtimeName} == '' ]]; then
        echo 'No --runtime specified.' 1>&2
        exit 1
    fi

    sourceDir="$(cd "${baseDir}/../.."; pwd)/samex-${runtimeName}"
    if [[ ! -d "${sourceDir}" ]]; then
        echo "Source directory not found: ${sourceDir}" 1>&2
        exit 1
    fi

    buildOpts=()

    if [[ ${optimize} == 'yes' ]]; then
        buildOpts=(--optimize)
    fi

    echo "Building..."
    "${sourceDir}/build" "${buildOpts[@]}" > /dev/null || exit 1
fi

runtimeOpt=()
if [[ ${runtimeName} != '' ]]; then
    runtimeOpt=(--runtime="${runtimeName}")
fi

suffixOpt=()
if [[ ${suffix} != '' ]]; then
    suffixOpt=(--suffix="${suffix}")
fi

name="$("${baseDir}/helper/find-samex" "${runtimeOpt[@]}" --bin)"
if [[ $? != 0 ]]; then
    exit 1
fi

cmd=("${name}" "${suffixOpt[@]}" "$@")

if [[ ${timeRun} == 'yes' ]]; then
    time -p "${cmd[@]}"
elif [[ ${profileRun} == 'yes' ]]; then
    # May also want to use the -allocations option.
    iprofiler -T 20s -timeprofiler "${cmd[@]}"
else
    exec "${cmd[@]}"
fi
